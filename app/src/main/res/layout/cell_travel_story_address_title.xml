<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/rl_cell_travel_story_address_title_img"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_ellipse_red"
            android:scaleType="center"
            android:layout_centerInParent="true"
            android:layout_alignParentLeft="true"/>

        <TextView
            android:id="@+id/rl_cell_travel_story_address_title_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/rl_cell_travel_story_address_title_img"
            android:layout_centerInParent="true"
            android:text="Максима Горького, 23"
            android:textColor="#424242"
            android:textSize="17sp" />

    </RelativeLayout>

</RelativeLayout>