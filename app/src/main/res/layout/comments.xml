<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@drawable/empty_chat_with_driver"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/cl_comments.rl_comments"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/grey_line"
        android:orientation="horizontal"
        android:paddingTop="15dp"
        android:paddingBottom="10dp"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/cl_comments.rl_comments.title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Комментарий"
            android:textColor="#424242"
            android:textSize="17sp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/cl_comments.rl_comments.imgButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="#FFF"
            android:paddingRight="15dp"
            android:src="@drawable/icon_refuse_button" />

    </RelativeLayout>

    <EditText
        android:id="@+id/cl_comments.rl_comments.editText"
        android:layout_width="346dp"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:hint="Укажите подъезд"
        android:inputType="text"
        android:paddingTop="20dp"
        android:backgroundTint="#EDEDED"
        android:textAlignment="viewStart"
        android:textColor="#EDEDED"
        android:textSize="17sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cl_comments.rl_comments"
        tools:ignore="RtlCompat" />


    <LinearLayout
        android:id="@+id/cl_comments.rl_comments.ll_comments"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="5dp"
        android:gravity="center_horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <Button
            android:id="@+id/cl_comments.rl_comments.ll_comments.button"
            android:layout_width="350dp"
            android:layout_height="60dp"
            android:background="@drawable/mybutton"
            android:text="Готово"
            android:textAllCaps="false"
            android:textColor="#ffffff"
            android:textSize="17sp" />

    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>