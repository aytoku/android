<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <RelativeLayout
        android:id="@+id/rl_program_error"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        tools:ignore="MissingConstraints">

        <ImageButton
            android:id="@+id/rl_program_error1_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:padding="15dp"
            android:clickable="true"
            android:focusable="true"
            android:background="@null"
            android:foreground="?android:selectableItemBackground"
            android:src="@drawable/ic_arrow_left" />

        <TextView
            android:id="@+id/rl_program_error1_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_weight="0.5"
            android:text="Ошибка программы"
            android:textColor="#424242"
            android:textSize="17sp"
            android:textStyle="bold" />

    </RelativeLayout>

    <TextView
        android:id="@+id/rl_program_error1.desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_program_error"
        android:layout_centerInParent="true"
        android:layout_centerHorizontal="true"
        android:layout_weight="1"
        android:paddingLeft="15dp"
        android:text="Вы можете написать подрробный комментарий\nо поездке или сообщить какую-либо\nинформацию о водителе"
        android:textColor="#B4B4B4"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/rl_program_error1.desc1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_program_error1.desc"
        android:layout_centerInParent="true"
        android:layout_centerHorizontal="true"
        android:layout_weight="1"
        android:paddingLeft="15dp"
        android:paddingTop="20dp"
        android:paddingBottom="5dp"
        android:text="Комментарий"
        android:textColor="#B4B4B4"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/rl_program_error1.textarea"
        android:layout_width="330dp"
        android:layout_height="210dp"
        android:layout_below="@+id/rl_program_error1.desc1"
        android:layout_centerInParent="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1"
        android:background="@drawable/textarea"
        android:ellipsize="start"
        android:gravity="center"
        android:inputType="text" />

    <LinearLayout
        android:id="@+id/rl_rating.ll_rating1"
        android:layout_width="match_parent"
        android:layout_height="74dp"
        android:layout_below="@+id/rl_program_error1.textarea"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_centerInParent="true"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:paddingTop="20dp"
        tools:ignore="Orientation">

        <androidx.cardview.widget.CardView
            android:id="@+id/ll_rating_ll_rating1_cardButton"
            android:layout_width="255dp"
            android:layout_height="50dp"
            android:clickable="true"
            android:elevation="0dp"
            android:focusable="true"
            android:foreground="?android:selectableItemBackground"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            app:cardBackgroundColor="#FC5B58"
            app:cardCornerRadius="11dp"
            app:cardElevation="0dp">

            <TextView
                android:id="@+id/ll_travel_story_1_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:clickable="true"
                android:focusable="true"
                android:text="Отправить"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:textSize="15sp" />

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</RelativeLayout>