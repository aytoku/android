<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="15dp"
    android:paddingLeft="12sp"
    android:background="@color/my_gray">

    <androidx.cardview.widget.CardView
        android:id="@+id/ll_alert.cv_item"
        android:layout_width="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/my_gray"
        app:cardCornerRadius="10dp"
        app:cardElevation="0dp"
        app:cardUseCompatPadding="true">

            <LinearLayout
                android:id="@+id/ll_alert.cv_item.l_alert"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/cv"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/ll_alert.cv_item.question"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="15dp"
                    android:paddingLeft="30dp"
                    android:paddingBottom="10dp"
                    android:paddingRight="60dp"
                    android:background="@drawable/grey_line"
                    android:layout_gravity="left"
                    android:text="Вы действительно хотите \nотменить поездку?"
                    android:textColor="#424242"
                    android:textSize="17sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/ll_alert.cv_item.refuse"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:paddingBottom="20dp"
                    android:paddingTop="15dp"
                    android:background="@drawable/grey_line"
                    android:text="Отменить поездку"
                    android:textColor="#424242"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/ll_alert.cv_item.no_refuse"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="15dp"
                    android:gravity="center_horizontal"
                    android:layout_gravity="center"
                    android:paddingBottom="20dp"
                    android:text="Не отменять"
                    android:textColor="#424242"
                    android:textSize="17sp" />

            </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>