<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Закрыть"
            android:paddingTop="10dp"
            android:textStyle="bold"
            android:textSize="15sp"
            android:textColor="@color/my_black"
            android:paddingLeft="330dp"
            android:paddingBottom="20sp"/>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <ImageButton
                android:id="@+id/img_cross_grey"
                android:layout_width="wrap_content"
                android:paddingLeft="15dp"
                android:background="@color/my_white"
                android:layout_height="match_parent"
                android:src="@drawable/icon_group_cross_grey"
                android:layout_gravity="left"
                android:scaleType="center"
                android:scaleX="1.4"
                android:scaleY="1.3"/>




            <TextView
                android:id="@+id/cost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/my_black"
                android:text="Максима Горького, 23"
                android:textSize="20dp"
                android:paddingRight="18dp"
                android:paddingLeft="35dp"/>


            <ImageButton
                android:id="@+id/img_three_lines"
                android:background="@color/my_white"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingLeft="70dp"
                android:src="@drawable/icon_three_lines"
                android:layout_gravity="right"
                android:scaleX="1"
                android:scaleY="1.3"/>







        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="60dp"
                android:textColor="#AAAAAA"
                android:textSize="17sp"
                android:text="Добавить остановку"
                android:paddingTop="40dp"
                />
        </LinearLayout>





    </LinearLayout>





</androidx.coordinatorlayout.widget.CoordinatorLayout>