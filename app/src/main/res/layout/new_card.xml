<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/rl_new_card_button"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@null"
            android:paddingLeft="15dp"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:src="@drawable/icon_strelka"/>

        <TextView
            android:id="@+id/LL_new_card.title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#424242"
            android:paddingTop="15dp"
            android:paddingBottom="10dp"
            android:gravity="center_horizontal"
            android:text="Новая карта"
            android:textStyle="bold"
            android:textSize="19sp"/>

    </RelativeLayout>

            <TextView
                android:id="@+id/LL_new_card.card_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:paddingBottom="3dp"
                android:paddingLeft="15dp"
                android:text="Номер карты"
                android:textSize="13sp"
                android:textColor="#8A8A8A"/>

            <EditText
                android:id="@+id/LL_new_card.card_number_field"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="20"
                android:paddingTop="15dp"
                android:textAlignment="center"
                android:background="@drawable/line_grey"
                android:textColorHint="#C0BFC6"
                android:maxLength="12"
                android:inputType="number"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/LL_new_card.term"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="15dp"
                        android:text="Срок действия"
                        android:paddingTop="5dp"
                        android:paddingBottom="20dp"
                        android:textSize="13sp"
                        android:textColor="#8A8A8A"/>

                    <EditText
                        android:id="@+id/LL_new_card.term_field"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:textAlignment="center"
                        android:paddingTop="15dp"
                        android:background="@drawable/line_grey"
                        android:textColorHint="#C0BFC6"
                        android:maxLength="5"
                        android:inputType="number"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/LL_new_card.cvv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="15dp"
                        android:text="CVV"
                        android:paddingTop="5dp"
                        android:paddingBottom="20dp"
                        android:textSize="13sp"
                        android:textColor="#8A8A8A"/>

                    <EditText
                        android:id="@+id/LL_new_card.cvv_field"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:textAlignment="center"
                        android:layout_weight="1"
                        android:background="@drawable/line"
                        android:paddingTop="15dp"
                        android:textColorHint="#C0BFC6"
                        android:maxLength="4"
                        android:inputType="numberPassword"/>

                    <TextView
                        android:id="@+id/LL_new_card.cv_desc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="15dp"
                        android:text="Трехзначный код  на\nобороте карты"
                        android:textSize="13sp"
                        android:paddingBottom="40dp"
                        android:textColor="#8A8A8A"/>

                </LinearLayout>

            </LinearLayout>

    <LinearLayout
        android:id="@+id/cl_rating.ll_rating1"
        android:layout_width="match_parent"
        android:layout_height="74dp"
        android:gravity="center_horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="Orientation">

        <androidx.cardview.widget.CardView
            android:id="@+id/cl_rating_ll_rating1_cardButton"
            android:layout_width="350dp"
            android:layout_height="61dp"
            android:focusable="true"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:clickable="true"
            android:elevation="0dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="#F3F3F3"
            app:cardCornerRadius="11dp">

            <TextView
                android:id="@+id/cl_rating_ll_rating3_cardButton_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Привязать карту"
                android:focusable="true"
                android:clickable="true"
                android:textAlignment="center"
                android:layout_gravity="center_horizontal|center_vertical"
                android:textAllCaps="false"
                android:textColor="#33353E"
                android:textSize="17sp"/>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</LinearLayout>