<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF">

    <RelativeLayout
        android:id="@+id/rl_payment_method"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:paddingTop="20dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/rl_payment_method.button_strelka"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#FFF"
            android:layout_alignParentLeft="true"
            android:src="@drawable/icon_strelka"/>

        <TextView
            android:id="@+id/rl_payment_method.edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Изменить"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_alignParentRight="true"
            android:textColor="#424242"/>

    </RelativeLayout>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/ll_payment_method"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="30dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/ll_payment_method.title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:paddingBottom="30dp"
            android:paddingLeft="20dp"
            android:textSize="21sp"
            android:text="Способ оплаты"
            android:textColor="#424242"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingRight="15dp"
            android:paddingLeft="20dp"
            android:orientation="horizontal">

        <ImageView
            android:id="@+id/ll_payment_method.visa"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:src="@mipmap/icon_credit_card"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <LinearLayout
                android:paddingLeft="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

            <TextView
                android:id="@+id/ll_payment_method.visa_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#424242"
                android:text="VISA 9966"
                android:paddingRight="142dp"
                android:textStyle="bold"
                android:textSize="17sp"/>

                <TextView
                    android:id="@+id/ll_payment_method.visa_numbers"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#C6C6C6"
                    android:text="03/22"
                    android:paddingBottom="5dp"
                    android:textSize="13sp"/>
                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="#EDEDED"/>

            </LinearLayout>

                <CheckBox
                    android:id="@+id/ll_payment_method.checkBoxBold"
                    android:button="@drawable/toggle_checked"
                    android:paddingTop="25dp"
                    android:layout_weight="0"
                    android:layout_width="30dp"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ll_payment_method.sberbank"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_sber"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingRight="15dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:paddingLeft="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/ll_payment_method.sber_online"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#424242"
                        android:text="Sberbank Online"
                        android:paddingTop="10dp"
                        android:paddingRight="100dp"
                        android:paddingBottom="15dp"
                        android:textSize="17sp"/>

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="1dp"
                        android:background="#EDEDED"/>

                </LinearLayout>

                <CheckBox
                    android:id="@+id/ll_payment_method.checkBoxBold1"
                    android:button="@drawable/togle_uncheked"
                    android:paddingTop="25dp"
                    android:layout_weight="0"
                    android:layout_width="30dp"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ll_payment_method.rubble"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:src="@mipmap/icon_rub"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingRight="15dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:paddingLeft="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/ll_payment_method.cash"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#424242"
                        android:text="Наличные"
                        android:paddingTop="10dp"
                        android:paddingRight="142dp"
                        android:paddingBottom="15dp"
                        android:textSize="17sp"/>

                </LinearLayout>

                <CheckBox
                    android:id="@+id/ll_payment_method.checkBoxBold2"
                    android:button="@drawable/togle_uncheked"
                    android:paddingTop="25dp"
                    android:layout_weight="0"
                    android:layout_width="30dp"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:background="#EDEDED" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/ll_payment_method.add_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Добавить карту"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:textSize="17sp"
                android:textColor="#424242"/>
            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="#EDEDED"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingRight="15dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/ll_payment_method.tips"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:text="Чаевые по умолчанию"
                    android:textSize="17sp"
                    android:textColor="#424242"/>

                <TextView
                    android:id="@+id/ll_payment_method.percents"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:text="0%"
                    android:paddingRight="20dp"
                    android:textSize="17sp"
                    android:textColor="#424242"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:orientation="vertical">

                    <ImageButton
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:src="@drawable/ic_arrow_up"/>

                    <ImageButton
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:src="@drawable/ic_arrow_down"/>


                </LinearLayout>

            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="#EDEDED"/>

          </LinearLayout>

      </LinearLayout>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</LinearLayout>