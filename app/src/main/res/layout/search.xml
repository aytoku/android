<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="#FFF"
    android:layout_height="match_parent">

<androidx.coordinatorlayout.widget.CoordinatorLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="left"
        android:background="@drawable/angle_search_radius"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/line_search"
            android:inputType="none"
            android:ems="3"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/circle_img"
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:src="@drawable/icon_elips_grey"
                android:scaleType="centerInside"
                android:paddingBottom="7dp" />

            <TextView
                android:id="@+id/address_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Адресс места назначения"
                android:textSize="17sp"
                android:textColor="#D4D4D4"
                android:paddingTop="10dp"
                android:paddingBottom="20dp" />

        </LinearLayout>

    </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="#EDEDED"/>

        <TextView
            android:id="@+id/address_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Коста Хетагурова, 123"
            android:layout_weight="0.1"
            android:textSize="17sp"
            android:textColor="#424242"
            android:paddingTop="20sp"
            android:paddingLeft="40dp"/>

        <TextView
            android:id="@+id/place_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:textColor="#9B9B9B"
            android:layout_weight="0.1"
            android:textSize="11sp"
            android:text="г. Владикавказ, республика Северная Осетия-Алания,\n Россия"
            android:paddingLeft="40dp"
            android:paddingBottom="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Анечка"
            android:textSize="17sp"
            android:layout_weight="0.5"
            android:textColor="#424242"
            android:paddingTop="20sp"
            android:paddingLeft="40dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:textSize="11sp"
            android:layout_weight="0.5"
            android:text="Августовских событий, 94"
            android:textColor="#9B9B9B"
            android:paddingLeft="40dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Августовских событий, 79"
            android:textSize="17sp"
            android:layout_weight="0.5"
            android:textColor="#424242"
            android:paddingTop="20sp"
            android:paddingLeft="40dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:textSize="11sp"
            android:layout_weight="0.5"
            android:text="г. Владикавказ, республика Северная Осетия-Алания,\n Россия"
            android:textColor="#9B9B9B"
            android:paddingLeft="40dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Мамсурова, 3"
            android:textSize="17sp"
            android:textColor="#424242"
            android:layout_weight="0.5"
            android:paddingTop="20sp"
            android:paddingLeft="40dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:textSize="11sp"
            android:textColor="#9B9B9B"
            android:layout_weight="0.5"
            android:text="г. Владикавказ, республика Северная Осетия-Алания,\n Россия"
            android:paddingLeft="40dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"/>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="#EDEDED"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_weight="0.5"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/arrow_img"
                android:paddingTop="5dp"
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:src="@drawable/icon_arrow_right"
                android:scaleType="center"
                android:paddingLeft="11dp"
                android:scaleX="1.4"
                android:scaleY="1.3"/>

            <TextView
                android:id="@+id/dont_show"
                android:paddingTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Не указывать место назначения"
                android:textSize="17sp"
                android:textColor="#424242"
                android:paddingBottom="15dp"/>

        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="#EDEDED"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_weight="0.1"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_two_lines"
                android:paddingTop="10dp"
                android:layout_width="90dp"
                android:paddingLeft="11dp"
                android:layout_height="match_parent"
                android:src="@drawable/icon_group_7"
                android:scaleType="center"
                android:scaleX="1.4"
                android:scaleY="1.2"/>

            <TextView
                android:id="@+id/show_on_map"
                android:paddingTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Указать на карте"
                android:textSize="17sp"
                android:textColor="#424242"
                android:paddingBottom="10dp"/>

        </LinearLayout>

    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>

</LinearLayout>