<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">



            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center">



                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Служба поддержки"
                    android:textColor="#424242"
                    android:textSize="17sp"
                    android:textStyle="bold"/>


            </LinearLayout>

            <TextView
                android:paddingLeft="40dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Последняя поездка"
                android:textColor="#B9B9B9"
                android:textSize="14sp"/>



            <androidx.cardview.widget.CardView
                android:id="@+id/cv_item"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="10dp"
                app:cardUseCompatPadding="true"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@color/my_gray">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@drawable/background_with_shadow"
                    android:orientation="vertical"
                    >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Сегодня 10:10"
                            android:paddingTop="15dp"
                            android:paddingLeft="15dp"
                            android:paddingBottom="15dp"
                            android:textStyle="bold"
                            android:textColor="#424242"
                            android:textSize="17sp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="66 ₽"
                            android:paddingRight="15dp"
                            android:paddingLeft="160dp"
                            android:textStyle="bold"
                            android:textColor="#424242"
                            android:textSize="17sp"/>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="match_parent"
                            android:src="@drawable/icon_ellipse_red"
                            android:scaleType="center"
                            android:paddingTop="10dp"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Максима Горького, 23"
                            android:textSize="17sp"
                            android:textColor="#424242"
                            android:paddingTop="15dp"
                            />


                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="match_parent"
                            android:src="@drawable/icon_circle"
                            android:scaleType="center"
                            android:paddingTop="10dp"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Коста Хетагурова, 123"
                            android:textSize="17sp"
                            android:textColor="#424242"
                            android:paddingTop="15dp"
                            />


                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingBottom="20dp"
                            android:paddingRight="10dp"
                            android:paddingTop="10dp"
                            android:paddingLeft="15dp">

                            <Button
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:drawableStart="@drawable/icon_sms"
                                android:text="Детали \n поездки"
                                android:paddingLeft="30dp"
                                android:paddingRight="30dp"
                                android:paddingTop="10dp"
                                android:paddingBottom="10dp"
                                android:background="@drawable/button_grey_story"
                                android:textAllCaps="false"
                                android:textColor="#424242"
                                android:textSize="14sp"
                                />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingBottom="20dp"
                            android:paddingRight="10dp"
                            android:paddingTop="10dp"
                            android:paddingLeft="20dp">

                            <Button
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:drawableStart="@drawable/icon_phone"
                                android:text="Водитель"
                                android:paddingLeft="30dp"
                                android:paddingRight="30dp"
                                android:paddingTop="10dp"
                                android:paddingBottom="10dp"
                                android:background="@drawable/button_grey_story"
                                android:textAllCaps="false"
                                android:textColor="#424242"
                                android:textSize="14sp"
                                />
                        </LinearLayout>


                    </LinearLayout>





                </LinearLayout>


            </androidx.cardview.widget.CardView>

            <TextView
                android:paddingLeft="40dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ваши вопросы"
                android:paddingTop="15dp"
                android:paddingBottom="10dp"
                android:textColor="#B9B9B9"
                android:textSize="14sp"/>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="15dp"
                android:paddingTop="10dp"
                android:orientation="horizontal">




                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Другая поездка"
                    android:paddingLeft="22dp"
                    android:paddingBottom="15dp"
                    android:textSize="17sp"
                    android:textColor="#424242"/>



            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="#EDEDED"/>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="15dp"
                android:paddingTop="10dp"
                android:orientation="horizontal">




                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Неаккуратное вождение"
                    android:paddingLeft="22dp"
                    android:paddingBottom="15dp"
                    android:textSize="17sp"
                    android:textColor="#424242"/>



            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="#EDEDED"/>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="15dp"
                android:paddingTop="10dp"
                android:orientation="horizontal">




                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ошибка программы"
                    android:paddingLeft="22dp"
                    android:paddingBottom="15dp"
                    android:textSize="17sp"
                    android:textColor="#424242"/>



            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="#EDEDED"/>

        </LinearLayout>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>






</LinearLayout>