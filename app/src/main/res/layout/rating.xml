<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:theme="@style/AppTheme"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <TextView
        android:id="@+id/rl_rating_cost"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/rl_rating.title"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:paddingBottom="10dp"
        android:text="90₽"
        android:textColor="#424242"
        android:textSize="32sp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"/>

    <TextView
        android:id="@+id/rl_rating.title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/rl_rating.ll_rating"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:text="Как вам поездка?"
        android:textColor="@color/my_black"
        android:textSize="13sp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"/>

    <LinearLayout
        android:id="@+id/rl_rating.ll_rating"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/rl_rating_ll_rating_address"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true">

        <ImageView
            android:id="@+id/ll_rating_star_image1"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:focusable="true"
            android:scaleType="center"
            android:scaleX="1"
            android:scaleY="1"
            android:src="@drawable/icon_star_grey" />

        <ImageView
            android:id="@+id/ll_rating_star_image2"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:focusable="true"
            android:scaleType="center"
            android:scaleX="1"
            android:scaleY="1"
            android:src="@drawable/icon_star_grey" />

        <ImageView
            android:id="@+id/ll_rating_star_image3"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:focusable="true"
            android:scaleType="center"
            android:scaleX="1"
            android:scaleY="1"
            android:src="@drawable/icon_star_grey" />

        <ImageView
            android:id="@+id/ll_rating_star_image4"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:focusable="true"
            android:scaleType="center"
            android:scaleX="1"
            android:scaleY="1"
            android:src="@drawable/icon_star_grey" />

        <ImageView
            android:id="@+id/ll_rating_star_image5"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:focusable="true"
            android:scaleType="center"
            android:scaleX="1"
            android:scaleY="1"
            android:src="@drawable/icon_star_grey" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/rl_rating_ll_rating_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:layout_above="@+id/rl_rating.tips_title">

        <TextView
            android:id="@+id/rl_rating_ll_rating_address_title1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Хаджи Мамсурова, 42"
            android:textColor="#424242"
            android:textSize="13sp"
            android:paddingRight="5dp"/>

        <ImageView
            android:id="@+id/rl_rating_ll_rating_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_arrow_right"/>

        <TextView
            android:id="@+id/rl_rating_ll_rating_address_title2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:text="Леонова, 2"
            android:textColor="#424242"
            android:textSize="13sp"/>


    </LinearLayout>

    <TextView
        android:id="@+id/rl_rating.tips_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/rl_rating_tips_recycler"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:paddingTop="15dp"
        android:paddingBottom="10dp"
        android:text="Чаевые водителю"
        android:textColor="@color/my_black"
        android:textSize="17sp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rl_rating_tips_recycler"
        android:layout_width="wrap_content"
        android:layout_height="90dp"
        android:layout_above="@+id/rl_rating.praise_title"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:overScrollMode="never"
        android:paddingLeft="10dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"/>

    <TextView
        android:id="@+id/rl_rating.praise_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/rl_rating_praise_recycler"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:paddingTop="15dp"
        android:paddingBottom="30dp"
        android:text="За что похвалить водителя?"
        android:textColor="@color/my_black"
        android:textSize="17sp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rl_rating_praise_recycler"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/rl_rating.ll_rating1"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:overScrollMode="never"
        android:paddingLeft="10dp"
        android:paddingBottom="20dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"/>

    <LinearLayout
        android:id="@+id/rl_rating.ll_rating1"
        android:layout_width="match_parent"
        android:layout_height="74dp"
        android:layout_alignParentBottom="true"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        tools:ignore="Orientation">

        <androidx.cardview.widget.CardView
            android:id="@+id/ll_rating_cardButton"
            android:layout_width="350dp"
            android:layout_height="61dp"
            android:clickable="true"
            android:elevation="0dp"
            android:focusable="true"
            android:foreground="?android:selectableItemBackground"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            app:cardBackgroundColor="#F3F3F3"
            app:cardCornerRadius="11dp"
            app:cardElevation="0dp">

            <TextView
                android:id="@+id/ll_rating_cardButton_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:clickable="true"
                android:focusable="true"
                android:text="Готово"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="#33353E"
                android:textSize="17sp" />

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</RelativeLayout>