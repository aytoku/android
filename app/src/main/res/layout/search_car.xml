<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:theme="@style/AppTheme"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="10dp"
        android:paddingLeft="15dp"
        android:orientation="vertical">


        <View
            android:layout_width="60dp"
            android:layout_height="8dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/line_search" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Поиск машины"
                android:paddingTop="30dp"
                android:textColor="#424242"
                android:textSize="17sp"
                android:paddingBottom="20dp"
                android:textStyle="bold" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:id="@+id/write"
            android:layout_width="wrap_content"
            android:layout_height="140dp"
            app:cardBackgroundColor="@color/my_gray"
            app:cardCornerRadius="10dp"
            app:cardElevation="0dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/write_img"
                    android:layout_width="100dp"
                    android:background="@drawable/seek_car"
                    android:elevation="0dp"
                    android:layout_height="match_parent"
                    android:scaleType="center" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="40dp">

                <androidx.cardview.widget.CardView
                    android:id="@+id/write1"
                    android:layout_width="wrap_content"
                    android:layout_height="140dp"
                    app:cardBackgroundColor="@color/my_gray"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="0dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/write_img1"
                            android:layout_width="100dp"
                            android:background="@drawable/seek_car"
                            android:elevation="0dp"
                            android:layout_height="match_parent"
                            android:scaleType="center" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>


            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="40dp">

                <androidx.cardview.widget.CardView
                    android:id="@+id/write2"
                    android:layout_width="wrap_content"
                    android:layout_height="140dp"
                    app:cardBackgroundColor="@color/my_gray"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="0dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/write_img2"
                            android:layout_width="100dp"
                            android:background="@drawable/seek_car"
                            android:elevation="0dp"
                            android:layout_height="match_parent"
                            android:scaleType="center" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>


            </LinearLayout>



        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="15dp">

            <androidx.cardview.widget.CardView
                android:id="@+id/call"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                app:cardBackgroundColor="@color/my_gray"
                app:cardCornerRadius="11dp"
                app:cardElevation="2dp">


                <LinearLayout
                    android:layout_width="180dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/background_with_shadow"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/call_img"
                        android:layout_width="30dp"
                        android:layout_height="wrap_content"
                        android:paddingTop="28dp"
                        android:paddingLeft="10dp"
                        android:scaleType="center"
                        android:scaleX="1"
                        android:scaleY="1"
                        android:src="@drawable/icon_cross_black" />



                    <TextView
                        android:id="@+id/title_call"
                        android:layout_width="90dp"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:paddingLeft="5dp"
                        android:text="Отменить"
                        android:textColor="#424242"
                        android:textSize="14sp"
                        android:textStyle="bold" />



                </LinearLayout>


            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="7dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="70dp"
                    app:cardBackgroundColor="@color/my_gray"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="2dp">



                    <LinearLayout
                        android:layout_width="180dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/background_with_shadow"
                        android:paddingLeft="10dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="match_parent"
                            android:scaleType="center"
                            android:scaleX="1"
                            android:scaleY="1"
                            android:src="@drawable/icon_plus" />


                        <TextView
                            android:id="@+id/title_write"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:text="Заказать еще машину"
                            android:textColor="#424242"
                            android:textSize="14sp"
                            android:textStyle="bold" />




                    </LinearLayout>


                </androidx.cardview.widget.CardView>


            </LinearLayout>
        </LinearLayout>



    </LinearLayout>

</LinearLayout>

