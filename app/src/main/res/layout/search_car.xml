<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:theme="@style/AppTheme"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/ll_search_car"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="10dp"
        android:orientation="vertical">

        <View
            android:layout_width="60dp"
            android:layout_height="8dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/line_search" />

        <TextView
            android:id="@+id/ll_search_car.title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Поиск машины"
            android:paddingTop="30dp"
            android:paddingLeft="20dp"
            android:textColor="#424242"
            android:textSize="17sp"
            android:paddingBottom="20dp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="25dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <androidx.cardview.widget.CardView
                    android:id="@+id/ll_search_car.cv1"
                    android:layout_width="wrap_content"
                    android:layout_height="140dp"
                    app:cardBackgroundColor="@color/my_gray"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="0dp">

                        <ImageView
                            android:id="@+id/ll_search_car.img"
                            android:layout_width="100dp"
                            android:background="@drawable/seek_car"
                            android:elevation="0dp"
                            android:layout_height="match_parent"
                            android:scaleType="center" />

                </androidx.cardview.widget.CardView>

            </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/ll_search_car.cv2"
                        android:layout_width="wrap_content"
                        android:layout_height="140dp"
                        app:cardBackgroundColor="@color/my_gray"
                        app:cardCornerRadius="10dp"
                        app:cardElevation="0dp">

                            <ImageView
                                android:id="@+id/ll_search_car.img1"
                                android:layout_width="100dp"
                                android:background="@drawable/seek_car"
                                android:elevation="0dp"
                                android:layout_height="match_parent"
                                android:scaleType="center" />

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/ll_search_car.cv3"
                        android:layout_width="wrap_content"
                        android:layout_height="140dp"
                        app:cardBackgroundColor="@color/my_gray"
                        app:cardCornerRadius="10dp"
                        app:cardElevation="0dp">

                            <ImageView
                                android:id="@+id/ll_search_car.img2"
                                android:layout_width="100dp"
                                android:background="@drawable/seek_car"
                                android:elevation="0dp"
                                android:layout_height="match_parent"
                                android:scaleType="center" />

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:gravity="center_horizontal"
            android:paddingTop="15dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:layout_weight="1"
                android:gravity="center_horizontal">

                <androidx.cardview.widget.CardView
                    android:id="@+id/ll_machine_purpose1_cv_call"
                    android:layout_width="160dp"
                    android:layout_height="70dp"
                    app:cardElevation="5dp"
                    app:cardCornerRadius="11dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/ll_machine_purpose1.img_call"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:scaleType="center"
                            android:scaleX="1"
                            android:scaleY="1"
                            android:src="@drawable/icon_cross_black" />

                        <TextView
                            android:id="@+id/ll_machine_purpose1.call"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:paddingRight="8dp"
                            android:paddingLeft="10dp"
                            android:text="Отменить"
                            android:textColor="#424242"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:layout_weight="1"
                android:gravity="center_horizontal">

                <androidx.cardview.widget.CardView
                    android:id="@+id/ll_machine_purpose1.cv_write"
                    android:layout_width="160dp"
                    android:layout_height="70dp"
                    app:cardElevation="5dp"
                    app:cardCornerRadius="11dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/ll_machine_purpose1.img_write"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:scaleType="center"
                            android:layout_gravity="center_vertical"
                            android:scaleX="1"
                            android:scaleY="1"
                            android:src="@drawable/icon_plus" />

                        <TextView
                            android:id="@+id/ll_machine_purpose1.write"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:paddingLeft="10dp"
                            android:paddingRight="8dp"
                            android:text="Заказать еще машину"
                            android:textColor="#424242"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

</LinearLayout>

