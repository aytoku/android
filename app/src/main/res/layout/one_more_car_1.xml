<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/icon_ellipse_red"
            android:paddingTop="20dp"
            android:layout_alignParentLeft="true"
            android:scaleType="center"
            android:scaleX="1.4"
            android:scaleY="1.3"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Максима Горького, 23"
            android:paddingLeft="40dp"
            android:paddingTop="15dp"
            android:textColor="#424242"
            android:textSize="17sp"/>


        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="15dp"
            android:paddingTop="20dp"
            android:background="#FFF"
            android:layout_alignParentRight="true"
            android:src="@drawable/icon_arrow_right"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="40dp"
            android:src="@drawable/icon_grey_plus"
            android:paddingTop="20dp"
            android:layout_alignParentLeft="true"
            android:scaleType="center"
            android:scaleX="1"
            android:scaleY="1"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Добавить остановку"
            android:paddingLeft="40dp"
            android:paddingTop="15dp"
            android:textColor="#424242"
            android:textSize="17sp"/>


        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="15dp"
            android:paddingTop="20dp"
            android:background="#FFF"
            android:layout_alignParentRight="true"
            android:src="@drawable/icon_arrow_right"/>
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/ll_create_order_but"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/icon_circle"
            android:paddingTop="20dp"
            android:layout_alignParentLeft="true"
            android:scaleType="center"
            android:scaleX="1.4"
            android:scaleY="1.3"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Коста Хетагурова, 123"
            android:paddingLeft="40dp"
            android:paddingTop="15dp"
            android:textColor="#424242"
            android:textSize="17sp"/>


        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="15dp"
            android:paddingTop="20dp"
            android:background="#FFF"
            android:layout_alignParentRight="true"
            android:src="@drawable/icon_arrow_right"/>
    </RelativeLayout>


    <View
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:background="#EDEDED"/>

</LinearLayout>