<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:orientation="vertical"
        android:layout_alignParentBottom="true">

        <LinearLayout
            android:id="@+id/ll_drivers_tips"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:orientation="vertical">

            <TextView
                android:id="@+id/ll_drivers_tips_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#F5F5F5"
                android:gravity="center_horizontal"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                android:text="Чаевые водителю"
                android:textColor="#424242"
                android:textSize="19sp"
                android:textStyle="bold" />

            </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/ll_driver_tips_recycler"
            android:layout_width="match_parent"
            android:overScrollMode="never"
            android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/ll_drivers_tips.desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:paddingLeft="20dp"
                android:paddingBottom="10dp"
                android:text="Чаевые будут списаны при оплате\nбанковской картой, если поездка вам\nпонравится. В конце поездки вы всегда\nможете изменить размер чаевых."
                android:textColor="#AAAAAA"
                android:textSize="15sp" />

        </LinearLayout>

</RelativeLayout>