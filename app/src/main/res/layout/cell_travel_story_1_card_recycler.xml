<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="10dp">

        <ImageView
            android:id="@+id/rl_travel_story_1_img_red_circle"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/icon_ellipse_red"
            android:scaleType="center"
            android:background="@null"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"/>

        <TextView
            android:id="@+id/rl_travel_story_1_address_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:layout_centerInParent="true"
            android:layout_toEndOf="@+id/rl_travel_story_1_img_red_circle"
            android:text="Максима Горького, 23"
            android:textColor="#424242"
            android:textSize="17sp" />

    </RelativeLayout>

</LinearLayout>