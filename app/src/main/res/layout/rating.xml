<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:theme="@style/AppTheme"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <TextView
        android:id="@+id/cl_rating.cost"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:text="90₽"
        android:textColor="@color/my_black"
        android:textSize="32sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/cl_rating.question1" />

    <TextView
        android:id="@+id/cl_rating.question1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:text="Как вам поездка?"
        android:textColor="@color/my_black"
        android:textSize="13sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/cl_rating.ll_rating" />

    <LinearLayout
        android:id="@+id/cl_rating.ll_rating"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/cl_rating.tips">

        <ImageView
            android:id="@+id/cl_rating_ll_rating_red_star1"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:scaleType="center"
            android:layout_weight="1"
            android:scaleX="1"
            android:scaleY="1"
            android:src="@drawable/icon_star_grey"/>

        <ImageView
            android:id="@+id/cl_rating_ll_rating_red_star2"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:scaleType="center"
            android:layout_weight="1"
            android:scaleX="1"
            android:scaleY="1"
            android:src="@drawable/icon_star_grey" />

        <ImageView
            android:id="@+id/cl_rating_ll_rating_red_star3"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:scaleType="center"
            android:layout_weight="1"
            android:scaleX="1"
            android:scaleY="1"
            android:src="@drawable/icon_star_grey"/>

        <ImageView
            android:id="@+id/cl_rating_ll_rating_red_star4"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:scaleType="center"
            android:layout_weight="1"
            android:scaleX="1"
            android:scaleY="1"
            android:src="@drawable/icon_star_grey" />

        <ImageView
            android:id="@+id/cl_rating_ll_rating_red_star5"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:scaleType="center"
            android:layout_weight="1"
            android:scaleX="1"
            android:scaleY="1"
            android:src="@drawable/icon_star_grey" />

    </LinearLayout>

    <TextView
        android:id="@+id/cl_rating.tips"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:text="Чаявые водителю"
        android:textColor="@color/my_black"
        android:textSize="17sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/cl_rating_rl_rating_recycler" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/cl_rating_rl_rating_recycler"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/cl_rating.question2"/>

    <TextView
        android:id="@+id/cl_rating.question2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:paddingTop="15dp"
        android:paddingBottom="30dp"
        android:text="За что похвалить водителя?"
        android:textColor="@color/my_black"
        android:textSize="17sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/cl_rating_rl_rating_recycler1" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/cl_rating_rl_rating_recycler1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:paddingLeft="10dp"
        android:paddingBottom="20dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/cl_rating.ll_rating1"/>

    <LinearLayout
        android:id="@+id/cl_rating.ll_rating1"
        android:layout_width="match_parent"
        android:layout_height="74dp"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="Orientation">

        <androidx.cardview.widget.CardView
            android:id="@+id/cl_rating.ll_rating1.cardButton"
            android:layout_width="350dp"
            android:layout_height="61dp"
            android:focusable="true"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:clickable="true"
            android:elevation="0dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="#F3F3F3"
            app:cardCornerRadius="11dp">

            <TextView
                android:id="@+id/cl_rating.ll_rating3.cardButton.text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Готово"
                android:focusable="true"
                android:clickable="true"
                android:textAlignment="center"
                android:layout_gravity="center_horizontal|center_vertical"
                android:textAllCaps="false"
                android:textColor="#33353E"
                android:textSize="17sp"/>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>