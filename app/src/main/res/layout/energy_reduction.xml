<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_energy_reduction"
            android:layout_width="280dp"
            android:layout_gravity="center_horizontal"
            android:layout_height="wrap_content">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/cv_energy_reduction.title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="24dp"
                    android:paddingTop="20sp"
                    android:text="Вы уверены, что хотите\nотказаться от заказа?"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/relativeLayout2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="10dp"
                    app:layout_constraintTop_toBottomOf="@+id/cv_energy_reduction.title">

                    <TextView
                        android:id="@+id/cv_energy_reduction.desc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="За отказ от заказа вы\nполучите штраф"
                        android:textColor="#757575"
                        android:textSize="16sp"
                        android:paddingLeft="24dp"
                        app:layout_constraintStart_toStartOf="parent"
                        tools:layout_editor_absoluteY="10dp"
                        tools:ignore="MissingConstraints" />

                    <TextView
                        android:id="@+id/cv_energy_reduction.num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="9sp"
                        android:text="-10"
                        android:textColor="#EE4D3F"
                        android:textSize="16sp"
                        app:layout_constraintStart_toEndOf="@+id/cv_energy_reduction.desc"
                        app:layout_constraintEnd_toEndOf="@+id/cv_energy_reduction.desc"
                        android:paddingRight="60dp"
                        tools:layout_editor_absoluteY="30dp"
                        tools:ignore="MissingConstraints" />

                    <ImageView
                        android:id="@+id/cv_energy_reduction.img"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_lightning"
                        android:paddingRight="80dp"
                        app:layout_constraintStart_toEndOf="@+id/cv_energy_reduction.num"
                        app:layout_constraintEnd_toEndOf="@+id/cv_energy_reduction.num"
                        tools:layout_editor_absoluteY="42dp"
                        tools:ignore="MissingConstraints" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <RelativeLayout
                    android:id="@+id/relativeLayout3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="20sp"
                    android:paddingBottom="17dp"
                    app:layout_constraintTop_toBottomOf="@+id/relativeLayout2">

                    <TextView
                        android:id="@+id/rl_energy_reduction.text1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toStartOf="@+id/rl_energy_reduction.text2"
                        android:text="ОТМЕНА"
                        android:paddingRight="20sp"
                        android:textColor="#212121"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/rl_energy_reduction.text2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ОТКАЗАТЬСЯ"
                        android:layout_alignParentRight="true"
                        android:textColor="#EE4D3F"
                        android:paddingRight="15dp"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                </RelativeLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

</LinearLayout>