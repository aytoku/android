<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/rl_create_order_wish"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:paddingTop="10dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/icon_red_bubble"
            android:text="2"
            android:textSize="17sp"
            android:textColor="#FFF"
            android:textAlignment="center"
            android:paddingTop="5dp" />

        <TextView
            android:id="@+id/rl_create_order_wish.title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="45dp"
            android:paddingTop="5dp"
            android:textAlignment="center"
            android:gravity="center"
            android:text="Пожелания"
            android:textSize="17sp"
            android:textColor="#424242"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="15dp"
            android:paddingTop="5dp"
            android:layout_alignParentRight="true"
            android:orientation="vertical">

            <TextView
                android:id="@+id/rl_create_order_wish.title1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Способ оплаты"
                android:textSize="17sp"
                android:textColor="#424242"/>

            <TextView
                android:id="@+id/rl_create_order_wish.description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Наличные"
                android:paddingLeft="55dp"
                android:textSize="14sp"
                android:textColor="#AFAFAF"/>

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>