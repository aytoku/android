<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF">

    <ImageButton
        android:id="@+id/rl_cell_create_order_1_1_5_button_cross"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@null"
        android:scaleType="center"
        android:clickable="true"
        android:focusable="true"
        android:layout_centerInParent="true"
        android:layout_alignParentLeft="true"
        android:scaleX="1.4"
        android:scaleY="1.3"
        android:src="@drawable/ic_cross"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/rl_cell_create_order_1_1_5_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/rl_cell_create_order_1_1_5_button_cross"
        android:gravity="center_horizontal"
        android:paddingLeft="15dp"
        android:layout_centerInParent="true"
        android:text="Максима Горького, 23"
        android:textColor="#424242"
        android:textSize="17sp"
        app:layout_constraintStart_toEndOf="@+id/rl_cell_create_order_1_1_5_button_cross"
        tools:ignore="MissingConstraints" />

    <ImageButton
        android:id="@+id/rl_cell_create_order_1_1_5_button_line"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:background="@null"
        android:clickable="true"
        android:focusable="true"
        android:paddingRight="8dp"
        android:layout_centerInParent="true"
        android:scaleX="1"
        android:scaleY="1.3"
        android:src="@drawable/icon_three_lines"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="MissingConstraints" />

</RelativeLayout>