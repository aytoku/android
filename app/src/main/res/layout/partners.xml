<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/rl_partners"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="15dp">

        <ImageButton
            android:id="@+id/rl_partners_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:layout_centerInParent="true"
            android:layout_alignParentLeft="true"
            android:src="@drawable/icon_strelka"/>

        <TextView
            android:id="@+id/rl_partners.ttile"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="15dp"
            android:paddingRight="20dp"
            android:layout_centerInParent="true"
            android:text="Партнеры"
            android:paddingBottom="20dp"
            android:textStyle="bold"
            android:textSize="17sp"
            android:textColor="#424242"/>

        <TextView
            android:id="@+id/rl_partners_blacklist"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="15dp"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:text="Черный список"
            android:paddingRight="15dp"
            android:paddingBottom="20dp"
            android:textSize="17sp"
            android:textColor="#424242"/>

    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_partners"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</LinearLayout>