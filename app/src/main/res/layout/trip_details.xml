<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/empty_chat_with_driver">

    <RelativeLayout
        android:id="@+id/rl_order_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:background="@drawable/grey_line"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/rl_order_details_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Детали заявки"
            android:textSize="17sp"
            android:layout_centerHorizontal="true"
            android:textColor="#424242"
            android:textStyle="bold"/>

        <ImageButton
            android:id="@+id/rl_order_details_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@null"
            android:paddingRight="15dp"
            android:src="@drawable/icon_refuse_button"/>

    </RelativeLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/ll_trip_details_title_recycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:overScrollMode="never"/>

</LinearLayout>