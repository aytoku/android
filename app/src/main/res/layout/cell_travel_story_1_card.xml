<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/ll_travel_story_1_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Сегодня 10:10"
        android:paddingTop="15dp"
        android:paddingLeft="15dp"
        android:paddingBottom="15dp"
        android:textStyle="bold"
        android:textColor="#424242"
        android:textSize="17sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ll_travel_story_1_img_red_circle"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:src="@drawable/icon_ellipse_red"
            android:scaleType="center"
            android:background="@null"
            android:paddingTop="10dp" />

        <TextView
            android:id="@+id/ll_travel_story_1_address_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Максима Горького, 23"
            android:textSize="17sp"
            android:textColor="#424242"
            android:paddingTop="15dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ll_travel_story_1_img_blue_circle"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:src="@drawable/icon_circle"
            android:background="@null"
            android:scaleType="center"
            android:paddingTop="10dp" />

        <TextView
            android:id="@+id/ll_travel_story_1_address_title2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Коста Хетагурова, 123"
            android:textSize="17sp"
            android:textColor="#424242"
            android:paddingTop="15dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="20dp"
        android:gravity="center_horizontal"
        android:paddingTop="20dp">

        <Button
            android:id="@+id/ll_travel_story_1_button"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:drawableStart="@drawable/icon_yellow_help"
            android:text="Помощь"
            android:paddingLeft="120dp"
            android:paddingRight="110dp"
            android:background="@drawable/button_grey_story"
            android:textAllCaps="false"
            android:textColor="#424242"
            android:textStyle="bold"
            android:textSize="14sp" />

    </LinearLayout>

</LinearLayout>