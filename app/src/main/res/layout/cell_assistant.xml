<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingLeft="10dp"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rl_cell_assistant"
            android:layout_width="290dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center_vertical"
            android:background="@drawable/ic_card_gradient"
            android:paddingLeft="15dp">

            <TextView
                android:id="@+id/rl_cell_assistant_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:paddingTop="10dp"
                android:paddingBottom="20dp"
                android:textStyle="bold"
                android:layout_alignParentEnd="true"
                android:text="Вы можете самостоятельно\nотрегулировать стоимоть"
                android:textColor="#FFF1F1"
                android:textSize="15sp" />

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:paddingTop="10dp"
        android:paddingRight="5dp">

        <ImageView
            android:id="@+id/rl_cell_assistant_button"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_gradient_circle"
            android:layout_alignParentRight="true"/>

    </LinearLayout>

</RelativeLayout>