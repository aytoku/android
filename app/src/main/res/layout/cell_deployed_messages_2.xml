<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingBottom="10dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_weight="1.5">

                <TextView
                    android:id="@+id/ll_cell_deployed_messages_2_title1"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:text="Нормально"
                    android:textSize="15sp"
                    android:gravity="center_vertical"
                    android:textAlignment="center"
                    android:textColor="#FFF1F1"
                    android:background="@drawable/ic_deployedmessages_2_back"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="10dp"
                android:layout_height="40dp"
                android:gravity="center_horizontal"
                android:background="@drawable/ic_deployed_messages_card_img_back"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/ll_cell_deployed_messages_2_img"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center_vertical"
                    android:src="@mipmap/finger"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_weight="1.5">

                <TextView
                    android:id="@+id/ll_cell_deployed_messages_2_title2"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:text="Нормально"
                    android:textAlignment="center"
                    android:gravity="center_vertical"
                    android:textSize="15sp"
                    android:textColor="#FFF1F1"
                    android:background="@drawable/ic_deployedmessages_2_back"/>

            </LinearLayout>

    </LinearLayout>

</LinearLayout>