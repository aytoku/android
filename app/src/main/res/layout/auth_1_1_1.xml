<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageButton
        android:id="@+id/cl_auth_1_1_1_image_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:paddingLeft="15dp"
        android:paddingTop="15dp"
        android:src="@drawable/icon_strelka"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/cl_auth_1_1_1_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="Ваш номер телефона"
        android:textColor="#424242"
        android:paddingTop="10dp"
        android:textAlignment="center"
        android:textSize="19sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cl_auth_1_1_1_image_button" />

    <TextView
        android:id="@+id/cl_auth_1_1_1_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="Россия +7"
        android:paddingTop="30dp"
        android:paddingBottom="10dp"
        android:textAllCaps="false"
        android:textColor="#AAAAAA"
        android:textSize="17sp"
        android:drawableRight="@drawable/ic_number_arrow"
        android:drawablePadding="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cl_auth_1_1_1_title" />

    <EditText
        android:id="@+id/cl_auth_1_1_1_editTextNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#FD6F6D"
        android:hint="+7 963 378-86-96"
        android:inputType="number"
        android:textAlignment="center"
        android:textColorHint="#C0BFC6"
        android:textSize="28sp"
        android:maxLength="13"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cl_auth_1_1_1_button"
        tools:ignore="MissingPrefix" />

    <TextView
        android:id="@+id/cl_auth_1_1_1_text_alert"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Указан неверный номер"
        android:textAlignment="center"
        android:textColor="#EE4D3F"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cl_auth_1_1_1_editTextNumber" />

    <TextView
        android:id="@+id/cl_auth_1_1_1_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="Нажимая кнопку 'Далее', вы принимаете условия\nпользовательского соглашения и политики\nконфиденцальности"
        android:textColor="#979797"
        android:textSize="13sp"
        android:paddingBottom="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/cl_auth_1_1_1_ll_auth_1_1_1" />

    <LinearLayout
        android:id="@+id/cl_auth_1_1_1_ll_auth_1_1_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/cl_auth_1_1_1_button1"
            android:layout_width="350dp"
            android:layout_height="60dp"
            android:background="@drawable/mybuttongrey"
            android:text="Далее"
            android:textAllCaps="false"
            android:textColor="#33353E"
            android:textSize="17sp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>