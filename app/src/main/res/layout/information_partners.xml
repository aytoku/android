<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/rl_information_partners"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.4"
        android:paddingLeft="15dp">

        <ImageButton
            android:id="@+id/rl_information_partners.button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:layout_centerInParent="true"
            android:layout_alignParentLeft="true"
            android:src="@drawable/icon_strelka"/>

            <TextView
                android:id="@+id/rl_information_partners.title"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:layout_centerInParent="true"
                android:text="Партнер 1"
                android:paddingBottom="20dp"
                android:textStyle="bold"
                android:textSize="17sp"
                android:textColor="#424242"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="15dp"
        android:paddingTop="20dp"
        android:paddingBottom="10dp"
        android:layout_weight="0.5"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/rl_information_partners.star_red"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="center"
            android:background="@null"
            android:scaleX="1"
            android:scaleY="1"
            android:src="@drawable/icon_little_red_star" />

        <ImageView
            android:id="@+id/rl_information_partners.star_red1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="center"
            android:background="@null"
            android:scaleX="1"
            android:scaleY="1"
            android:src="@drawable/icon_little_red_star" />

        <ImageView
            android:id="@+id/rl_information_partners.star_red2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="center"
            android:background="@null"
            android:scaleX="1"
            android:scaleY="1"
            android:src="@drawable/icon_little_red_star" />

        <ImageView
            android:id="@+id/rl_information_partners.star_red3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="center"
            android:background="@null"
            android:scaleX="1"
            android:scaleY="1"
            android:src="@drawable/icon_little_red_star" />

        <ImageView
            android:id="@+id/rl_information_partners.star_grey"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="center"
            android:background="@null"
            android:scaleX="1"
            android:scaleY="1"
            android:src="@drawable/icon_little_grey_star" />

    </LinearLayout>

        <TextView
            android:id="@+id/rl_information_partners.number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:paddingLeft="15dp"
            android:layout_weight="0"
            android:paddingBottom="10dp"
            android:text="№ 1987456"
            android:textColor="#979797"/>

        <TextView
            android:id="@+id/rl_information_partners.desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            android:paddingBottom="10dp"
            android:layout_weight="0.5"
            android:paddingLeft="15dp"
            android:text="ООО Партнер 1, 362040, Северная\nОсетия-Алания Респ., г. Владикавказ\nпросп.Мира, д. 31, ORGN:111111939"
            android:textColor="#424242"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:layout_weight="0.6"
            android:paddingLeft="15dp">

            <Spinner
                android:id="@+id/choose"
                android:layout_width="200dp"
                android:layout_height="30dp"
                android:background="@drawable/spinnerr"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:layout_weight="0.6"
            android:paddingBottom="15dp">

            <Spinner
                android:id="@+id/choose_cities"
                android:layout_width="250dp"
                android:layout_height="30dp"
                android:background="@drawable/spinnerr"/>

        </LinearLayout>

        <TextView
            android:id="@+id/rl_information_partners.cost"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textSize="15sp"
            android:paddingLeft="15dp"
            android:layout_weight="0.5"
            android:textStyle="bold"
            android:gravity="center_vertical"
            android:background="#F3F3F3"
            android:text="Стоимость расчета"
            android:textColor="#424242"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:background="@drawable/grey_line"
            android:paddingRight="15dp"
            android:paddingLeft="15dp"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/rl_information_partners.price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:text="39 руб."
                android:layout_alignParentRight="true"
                android:textStyle="bold"
                android:textColor="#424242"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:paddingRight="15dp"
            android:background="@drawable/grey_line"
            android:gravity="center_vertical"
            android:paddingLeft="15dp">

            <TextView
                android:id="@+id/rl_information_partners.free_wait"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:text="Бесплатное ожидание"
                android:layout_alignParentLeft="true"
                android:textStyle="bold"
                android:textColor="#424242"/>

                <TextView
                    android:id="@+id/rl_information_partners.min"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:text="3 мин"
                    android:layout_alignParentRight="true"
                    android:textStyle="bold"
                    android:textColor="#424242"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:paddingRight="15dp"
            android:background="@drawable/grey_line"
            android:gravity="center_vertical"
            android:paddingLeft="15dp">

            <TextView
                android:id="@+id/rl_information_partners.no_free_wait"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:text="Платное ожидание"
                android:layout_alignParentLeft="true"
                android:textStyle="bold"
                android:textColor="#424242"/>

            <TextView
                android:id="@+id/rl_information_partners.min1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:text="4 руб/мин"
                android:layout_alignParentRight="true"
                android:textStyle="bold"
                android:textColor="#424242"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:paddingRight="15dp"
            android:paddingLeft="15dp"
            android:background="@drawable/grey_line"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/rl_information_partners.town_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:text="Стоимость по городу"
                android:layout_alignParentLeft="true"
                android:textStyle="bold"
                android:textColor="#424242"/>

            <TextView
                android:id="@+id/rl_information_partners.min2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:text="4 руб/мин"
                android:layout_alignParentRight="true"
                android:textStyle="bold"
                android:textColor="#424242"/>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.8"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp"
                android:paddingRight="15dp"
                android:paddingLeft="15dp"
                android:paddingTop="10dp"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/rl_information_partners.countryside_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:background="@drawable/grey_line"
                    android:text="Стоимость загород"
                    android:layout_alignParentLeft="true"
                    android:textStyle="bold"
                    android:textColor="#424242"/>

                <TextView
                    android:id="@+id/rl_information_partners.min3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:text="4 руб/мин"
                    android:layout_alignParentRight="true"
                    android:textStyle="bold"
                    android:textColor="#424242"/>

            </RelativeLayout>

    </LinearLayout>

</LinearLayout>