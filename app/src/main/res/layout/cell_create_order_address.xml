<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/ll_create_order_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="90dp"
                    android:layout_height="150dp"
                    android:layout_weight="0"
                    android:paddingTop="5dp"
                    android:scaleType="center"
                    android:paddingRight="10dp"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/ll_create_order_address.img_red"
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:paddingTop="20dp"
                        android:scaleType="center"
                        android:paddingBottom="10dp"
                        android:scaleX="1.4"
                        android:scaleY="1.3"
                        android:src="@drawable/icon_ellipse_red"/>

                    <ImageView
                        android:id="@+id/ll_create_order_address.img_grey1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="10dp"
                        android:paddingLeft="40dp"
                        android:scaleType="center"
                        android:scaleX="1.1"
                        android:scaleY="1.1"
                        android:src="@drawable/ic_ellipse_grey_little" />

                    <ImageView
                        android:id="@+id/ll_create_order_address.img_grey2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="10dp"
                        android:scaleType="center"
                        android:paddingLeft="40dp"
                        android:scaleX="1.1"
                        android:scaleY="1.1"
                        android:src="@drawable/ic_ellipse_grey_little" />

                    <ImageView
                        android:id="@+id/ll_create_order_address.img_grey3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingBottom="10dp"
                        android:paddingTop="10dp"
                        android:paddingLeft="40dp"
                        android:scaleType="center"
                        android:scaleX="1.1"
                        android:scaleY="1.1"
                        android:src="@drawable/ic_ellipse_grey_little" />

                    <ImageView
                        android:id="@+id/ll_create_order_address.img_blue"
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:paddingTop="10dp"
                        android:scaleType="center"
                        android:scaleX="1.4"
                        android:scaleY="1.3"
                        android:src="@drawable/icon_circle"/>

                </LinearLayout>


                <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="30dp"
                    android:orientation="horizontal">
                        <TextView
                            android:id="@+id/ll_create_order_address.title1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="3"
                            android:paddingTop="20dp"
                            android:paddingBottom="10dp"
                            android:paddingRight="35dp"
                            android:text="Максима Горького, 23"
                            android:textAlignment="gravity"
                            android:textColor="#424242"
                            android:textSize="17sp" />

                        <Button
                            android:id="@+id/ll_create_order_address.button"
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:layout_weight="0"
                            android:background="@drawable/button_grey_story"
                            android:text="Уточнить"
                            android:textAllCaps="false"
                            android:textColor="#AAAAAA"
                            android:textSize="13sp" />

                </LinearLayout>

                    <View
                        android:id="@+id/ll_create_order_address.line1"
                        android:layout_width="match_parent"
                        android:layout_gravity="center_horizontal"
                        android:layout_height="1dp"
                        android:background="#EDEDED"/>




                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">
                     <androidx.constraintlayout.widget.ConstraintLayout
                         android:id="@+id/ll_create_order_address.constrain"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingTop="10dp"
                            android:layout_weight="4">

                         <TextView
                             android:id="@+id/ll_create_order_address.title2"
                             android:layout_width="wrap_content"
                             android:layout_height="wrap_content"
                             android:layout_marginEnd="88dp"
                             android:textAlignment="center"
                             android:paddingTop="20dp"
                             android:text="Коста Хетагурова, 123"
                             android:textColor="#424242"
                             android:textSize="17sp"
                             tools:ignore="MissingConstraints" />

                         <TextView
                             android:id="@+id/ll_create_order_address.time"
                             android:layout_width="100dp"
                             android:layout_height="wrap_content"
                             android:text="~12 мин"
                             android:textColor="#AAAAAA"
                             android:textSize="14sp"
                             app:layout_constraintBottom_toBottomOf="@+id/ll_create_order_address.title2"
                             app:layout_constraintStart_toEndOf="@+id/ll_create_order_address.title2"
                             app:layout_constraintTop_toTopOf="@+id/ll_create_order_address.title2"
                             app:layout_constraintVertical_bias="1.0"
                             tools:ignore="MissingConstraints" />

                     </androidx.constraintlayout.widget.ConstraintLayout>

                    <ImageView
                        android:id="@+id/ll_create_order_address.img_plus"
                        android:layout_width="40dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:paddingTop="20dp"
                        android:layout_weight="0"
                        android:scaleType="center"
                        android:scaleX="1.2"
                        android:scaleY="1.2"
                        android:src="@drawable/icon_cross_grey_1" />
                    </LinearLayout>


            </LinearLayout>

    </LinearLayout>

    <View
        android:id="@+id/ll_create_order_address.line2"
        android:layout_width="match_parent"
        android:layout_gravity="center_horizontal"
        android:layout_height="1dp"
        android:background="#EDEDED"/>

</LinearLayout>