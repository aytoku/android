<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/rl_empty_chat_with_driver"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="15dp"
        android:paddingBottom="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/rl_empty_chat_with_driver.title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Чат с водителем"
            android:textSize="17sp"
            android:layout_centerHorizontal="true"
            android:textColor="#424242"
            android:textStyle="bold"/>

        <ImageButton
            android:id="@+id/rl_empty_chat_with_driver.button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="#FFF"
            android:paddingRight="15dp"
            android:src="@drawable/icon_refuse_button"/>

    </RelativeLayout>


    <View
        android:layout_width="fill_parent"
        android:layout_height="3dp"
        android:background="#EDEDED"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rl_empty_chat_with_driver.recycler"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</LinearLayout>