<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_height="wrap_content">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#424242"
                android:paddingTop="15dp"
                android:layout_gravity="center_horizontal"
                android:text="Новая карта"
                android:textStyle="bold"
                android:textSize="19sp"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:paddingBottom="3dp"
                android:paddingLeft="15dp"
                android:text="Номер карты"
                android:textSize="13sp"
                android:textColor="#8A8A8A"/>






            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="20"
                android:paddingTop="15dp"
                android:paddingBottom="38dp"
                android:textAlignment="center"
                android:background="@drawable/line_grey"
                android:textColorHint="#C0BFC6"
                android:maxLength="12"
                android:inputType="number"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="15dp"
                    android:text="Срок действия"
                    android:paddingTop="5dp"
                    android:textSize="13sp"
                    android:textColor="#8A8A8A"/>



                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:textAlignment="center"
                        android:paddingTop="15dp"
                        android:paddingBottom="38dp"
                        android:background="@drawable/line_grey"
                        android:textColorHint="#C0BFC6"
                        android:maxLength="5"
                        android:inputType="number"/>


                </LinearLayout>



                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="15dp"
                        android:text="CVV"
                        android:paddingTop="5dp"
                        android:textSize="13sp"
                        android:textColor="#8A8A8A"/>



                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:textAlignment="center"
                        android:paddingBottom="38dp"
                        android:background="@drawable/line"
                        android:paddingTop="15dp"
                        android:textColorHint="#C0BFC6"
                        android:maxLength="4"
                        android:inputType="numberPassword"/>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:paddingLeft="15dp"
                        android:text="Трехзначный код  на \n обороте карты"
                        android:paddingTop="5dp"
                        android:textSize="13sp"
                        android:paddingBottom="40dp"
                        android:textColor="#8A8A8A"/>

                </LinearLayout>


            </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="160dp"
                    android:layout_gravity="center_horizontal">
                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/button_grey_story"
                            android:textAllCaps="false"
                            android:paddingLeft="110dp"
                            android:paddingRight="110dp"
                            android:paddingTop="20dp"
                            android:paddingBottom="20dp"
                            android:text="Привязать карту"/>
                </LinearLayout>
        </LinearLayout>




    </androidx.coordinatorlayout.widget.CoordinatorLayout>


</LinearLayout>