<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:foreground="?android:selectableItemBackground"
        android:paddingLeft="15dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/rl_cell_machine_purpose_lower_part.img1"
            android:layout_width="40dp"
            android:paddingRight="5dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:layout_weight="0"
            android:background="@null"
            android:src="@mipmap/icon_credit_card"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_toEndOf="@+id/rl_cell_machine_purpose_lower_part.img1"
            android:background="@drawable/grey_line">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/rl_cell_machine_purpose_lower_part.title1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="142dp"
                    android:text="VISA 9966"
                    android:textColor="#424242"
                    android:textSize="17sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/rl_cell_machine_purpose_lower_part.desc1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="5dp"
                    android:text="Изменить способ оплаты"
                    android:textColor="#C6C6C6"
                    android:textSize="13sp" />

            </LinearLayout>

        </LinearLayout>

        <ImageButton
            android:id="@+id/rl_cell_machine_purpose_lower_part_button1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:background="@null"
            android:foreground="?android:selectableItemBackground"
            android:paddingRight="15dp"
            android:src="@drawable/icon_arrow_right" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:paddingLeft="15dp"
        android:paddingTop="15dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/rl_cell_machine_purpose_lower_part.img2"
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:background="@null"
            android:paddingRight="5dp"
            android:layout_centerInParent="true"
            android:layout_alignParentLeft="true"
            android:src="@drawable/icon_navigation"/>

        <TextView
            android:id="@+id/rl_cell_machine_purpose_lower_part.title2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/rl_cell_machine_purpose_lower_part.img2"
            android:layout_centerInParent="true"
            android:gravity="center_vertical"
            android:text="Показать водителю где я"
            android:textColor="#424242"
            android:textSize="17sp"
            android:textStyle="bold" />

        <Switch
            android:id="@+id/rl_cell_machine_purpose_lower_part.switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:paddingRight="10dp"
            android:layout_centerInParent="true"
            android:checked="false"
            android:scaleX="1.2"
            android:scaleY="1.2"
            android:switchMinWidth="30dp"
            android:thumb="@drawable/switch_thumb"
            android:track="@drawable/switch_track_custom" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_cell_machine_purpose_lower_part"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="15dp"
        android:background="@drawable/grey_line"
        android:foreground="?android:selectableItemBackground"
        android:paddingTop="10dp"
        android:paddingBottom="5dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/rl_cell_machine_purpose_lower_part.img3"
            android:layout_width="35dp"
            android:layout_height="25dp"
            android:scaleX="1"
            android:background="@null"
            android:paddingRight="5dp"
            android:paddingTop="5dp"
            android:layout_centerInParent="true"
            android:scaleY="1"
            android:layout_alignParentLeft="true"
            android:src="@drawable/icon_shape"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/rl_cell_machine_purpose_lower_part.img3"
            android:layout_centerInParent="true"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingTop="5dp">

            <TextView
                android:id="@+id/rl_cell_machine_purpose_lower_part.title3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Детали поездки"
                android:textColor="#424242"
                android:textSize="17sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/rl_cell_machine_purpose_lower_part.desc2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="5dp"
                android:text="Стоимость поездки 145Р"
                android:textColor="#C6C6C6"
                android:textSize="13sp" />

        </LinearLayout>

        <ImageButton
            android:id="@+id/rl_cell_machine_purpose_lower_part_button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:foreground="?android:selectableItemBackground"
            android:background="@null"
            android:paddingRight="15dp"
            android:layout_centerInParent="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/icon_arrow_right"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="110dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:gravity="center_horizontal">

            <androidx.cardview.widget.CardView
                android:id="@+id/rl_cell_machine_purpose_lower_part_cv1"
                android:layout_width="150dp"
                android:layout_height="70dp"
                android:layout_gravity="center_vertical"
                android:foreground="?android:selectableItemBackground"
                app:cardElevation="5dp"
                app:cardCornerRadius="11dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:scaleType="center"
                        android:scaleX="1"
                        android:scaleY="1"
                        android:src="@drawable/icon_cross_black" />

                    <TextView
                        android:layout_width="120dp"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:paddingLeft="10dp"
                        android:text="Отменить"
                        android:textColor="#424242"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:gravity="center_horizontal">

            <androidx.cardview.widget.CardView
                android:id="@+id/rl_cell_machine_purpose_lower_part_cv2"
                android:layout_width="150dp"
                android:layout_height="70dp"
                app:cardElevation="5dp"
                android:foreground="?android:selectableItemBackground"
                android:layout_gravity="center_vertical"
                app:cardCornerRadius="11dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:scaleType="center"
                        android:scaleX="1"
                        android:scaleY="1"
                        android:src="@drawable/icon_plus" />

                    <TextView
                        android:layout_width="120dp"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:paddingLeft="5dp"
                        android:paddingRight="10dp"
                        android:text="Заказать еще машину"
                        android:textColor="#424242"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>