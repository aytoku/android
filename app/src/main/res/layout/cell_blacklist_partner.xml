<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFF">

    <RelativeLayout
        android:id="@+id/ll_cell_blacklist_partner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="15dp"
        android:foreground="?android:selectableItemBackground"
        android:background="@drawable/grey_line"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ll_cell_blacklist_partner_checkbox"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_alignParentLeft="true"
            android:src="@drawable/togle_uncheked" />

        <TextView
            android:id="@+id/ll_cell_blacklist_partner_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_toEndOf="@+id/ll_cell_blacklist_partner_checkbox"
            android:paddingLeft="20dp"
            android:layout_centerInParent="true"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:text="Партнер 1"
            android:textColor="#424242"
            android:textSize="17sp" />

    </RelativeLayout>

</LinearLayout>
