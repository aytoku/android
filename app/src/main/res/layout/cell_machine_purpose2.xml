<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/ll_machine_purpose2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingRight="15dp"
        android:paddingLeft="15dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ll_machine_purpose2.img"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:src="@mipmap/icon_credit_card"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="5dp"
                android:paddingLeft="15dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/ll_machine_purpose2.title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#424242"
                    android:text="VISA 9966"
                    android:paddingRight="142dp"
                    android:textStyle="bold"
                    android:textSize="17sp"/>

                <TextView
                    android:id="@+id/ll_machine_purpose2.desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#C6C6C6"
                    android:text="Изменить способ оплаты"
                    android:paddingBottom="5dp"
                    android:textSize="13sp"/>

            </LinearLayout>

        <ImageButton
            android:id="@+id/ll_machine_purpose2_img_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="15dp"
            android:paddingTop="15sp"
            android:background="#FFF"
            android:layout_alignParentRight="true"
            android:src="@drawable/icon_arrow_right"/>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingRight="20dp"
        android:paddingLeft="15dp"
        android:paddingTop="15dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ll_machine_purpose2.img2"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:layout_alignParentLeft="true"
            android:src="@drawable/icon_navigation"/>

            <TextView
                android:id="@+id/ll_machine_purpose2.title2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#424242"
                android:text="Показать водителю где я"
                android:paddingLeft="70dp"
                android:paddingRight="20dp"
                android:textStyle="bold"
                android:textSize="17sp"/>

            <Switch
                android:id="@+id/ll_machine_purpose2.switch"
                android:track="@drawable/switch_track_custom"
                android:thumb="@drawable/switch_thumb"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:switchMinWidth="30dp"
                android:checked="false"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:paddingTop="15dp"
                android:scaleX="1.2"
                android:scaleY="1.2"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingRight="15dp"
        android:paddingLeft="15dp"
        android:paddingTop="15dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ll_machine_purpose2.img3"
            android:layout_width="60dp"
            android:layout_height="25dp"
            android:scaleX="1"
            android:layout_centerInParent="true"
            android:scaleY="1"
            android:layout_alignParentLeft="true"
            android:src="@drawable/icon_shape"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:paddingLeft="70dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/ll_machine_purpose2.title3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#424242"
                android:text="Детали поездки"
                android:paddingRight="142dp"
                android:textStyle="bold"
                android:textSize="17sp"/>

            <TextView
                android:id="@+id/ll_machine_purpose2.desc2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#C6C6C6"
                android:text="Стоимость поездки 145Р"
                android:paddingBottom="5dp"
                android:textSize="13sp"/>

        </LinearLayout>

        <ImageButton
            android:id="@+id/ll_machine_purpose2_img_button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="15dp"
            android:paddingTop="20dp"
            android:background="#FFF"
            android:layout_alignParentRight="true"
            android:src="@drawable/icon_arrow_right"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="15dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/ll_machine_purpose2.cv_refuse"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            app:cardBackgroundColor="@color/my_gray"
            app:cardCornerRadius="11dp"
            app:cardElevation="2dp">

            <LinearLayout
                android:layout_width="180dp"
                android:layout_height="match_parent"
                android:background="@drawable/background_with_shadow"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ll_machine_purpose2.cv_refuse_img"
                    android:layout_width="90dp"
                    android:layout_height="match_parent"
                    android:scaleType="center"
                    android:scaleX="1.4"
                    android:scaleY="1.3"
                    android:src="@drawable/icon_cross_black" />

                <TextView
                    android:id="@+id/ll_machine_purpose2.cv_refuse_title"
                    android:layout_width="90dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:paddingEnd="8dp"
                    android:paddingRight="8dp"
                    android:text="Отменить"
                    android:textColor="#424242"
                    android:textSize="14sp"
                    android:textStyle="bold" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="7dp">

            <androidx.cardview.widget.CardView
                android:id="@+id/ll_machine_purpose2.cv_add"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                app:cardBackgroundColor="@color/my_gray"
                app:cardCornerRadius="10dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="180dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/background_with_shadow"
                    android:paddingLeft="10dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/ll_machine_purpose2.cv_add_img"
                        android:layout_width="50dp"
                        android:layout_height="match_parent"
                        android:scaleType="center"
                        android:scaleX="1"
                        android:scaleY="1"
                        android:src="@drawable/icon_plus" />

                    <TextView
                        android:id="@+id/ll_machine_purpose2.cv_add_title"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="Заказать еще машину"
                        android:textColor="#424242"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>