<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:theme="@style/AppTheme"
    android:layout_width="wrap_content" android:layout_height="120dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="15dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/lada"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingTop="10dp"
                android:paddingRight="20dp"
                android:paddingBottom="10dp"
                android:text="желтая LADA 2115"
                android:textColor="#424242"
                android:textSize="17sp" />

            <androidx.cardview.widget.CardView

                android:id="@+id/cv_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/my_gray"
                app:cardCornerRadius="20dp"
                app:cardElevation="0dp"
                app:cardUseCompatPadding="true">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@drawable/background_with_shadow">

                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:paddingLeft="20dp"
                        android:text="в413ну"
                        android:textStyle="bold"
                        android:textColor="#424242"
                        android:textSize="17sp"
                        tools:ignore="MissingConstraints" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginLeft="8dp"
                        android:text="12"
                        android:textColor="@color/my_black"
                        android:textSize="15sp"
                        app:layout_constraintBottom_toTopOf="@+id/textView"
                        app:layout_constraintStart_toEndOf="@+id/textView" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <androidx.cardview.widget.CardView
                android:id="@+id/call"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                app:cardBackgroundColor="@color/my_gray"
                app:cardCornerRadius="10dp"
                app:cardElevation="0dp"
                app:cardUseCompatPadding="true">

                <androidx.coordinatorlayout.widget.CoordinatorLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="@drawable/background_with_shadow"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/call_img"
                            android:layout_width="90dp"
                            android:layout_height="match_parent"
                            android:scaleType="center"
                            android:scaleX="1.4"
                            android:scaleY="1.3"
                            android:src="@drawable/icon_phone" />

                        <androidx.coordinatorlayout.widget.CoordinatorLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:gravity="center_horizontal|center_vertical"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/title_call"
                                    android:layout_width="90dp"
                                    android:layout_height="match_parent"
                                    android:paddingStart="8dp"
                                    android:paddingLeft="8dp"
                                    android:paddingEnd="8dp"
                                    android:paddingRight="8dp"
                                    android:text="Позвонить"
                                    android:textSize="14sp"
                                    android:textColor="#424242"
                                    android:textStyle="bold" />


                            </LinearLayout>
                        </androidx.coordinatorlayout.widget.CoordinatorLayout>

                    </LinearLayout>

                </androidx.coordinatorlayout.widget.CoordinatorLayout>

            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <androidx.cardview.widget.CardView
                    android:id="@+id/write"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    app:cardBackgroundColor="@color/my_gray"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="0dp"
                    app:cardUseCompatPadding="true">

                    <androidx.coordinatorlayout.widget.CoordinatorLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">


                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:background="@drawable/background_with_shadow"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/write_img"
                                android:layout_width="90dp"
                                android:layout_height="match_parent"
                                android:scaleType="center"
                                android:scaleX="1.4"
                                android:scaleY="1.3"
                                android:src="@drawable/icon_sms" />

                            <androidx.coordinatorlayout.widget.CoordinatorLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:gravity="center_horizontal|center_vertical"
                                    android:orientation="vertical">

                                    <TextView
                                        android:id="@+id/title_write"
                                        android:layout_width="90dp"
                                        android:layout_height="match_parent"
                                        android:paddingStart="8dp"
                                        android:paddingLeft="8dp"
                                        android:paddingEnd="8dp"
                                        android:paddingRight="8dp"
                                        android:text="Написать"
                                        android:textSize="14sp"
                                        android:textColor="#424242"
                                        android:textStyle="bold" />


                                </LinearLayout>
                            </androidx.coordinatorlayout.widget.CoordinatorLayout>


                        </LinearLayout>


                    </androidx.coordinatorlayout.widget.CoordinatorLayout>

                </androidx.cardview.widget.CardView>


            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</RelativeLayout>

