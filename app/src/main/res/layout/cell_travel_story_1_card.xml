<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/ll_travel_story_1_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Сегодня 10:10"
        android:paddingTop="15dp"
        android:paddingLeft="15dp"
        android:paddingBottom="15dp"
        android:textStyle="bold"
        android:textColor="#424242"
        android:textSize="17sp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/ll_cell_travel_story_1_recycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:overScrollMode="never"/>

    <LinearLayout
        android:id="@+id/cl_rating.ll_rating1"
        android:layout_width="match_parent"
        android:layout_height="74dp"
        android:paddingTop="20dp"
        android:gravity="center_horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="Orientation">

        <androidx.cardview.widget.CardView
            android:id="@+id/cl_rating_ll_rating1_cardButton"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:focusable="true"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:foreground="?android:selectableItemBackground"
            android:clickable="true"
            android:elevation="0dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="#F3F3F3"
            app:cardCornerRadius="11dp">

            <TextView
                android:id="@+id/ll_travel_story_1_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Помощь"
                android:focusable="true"
                android:drawablePadding="10dp"
                android:drawableStart="@drawable/icon_yellow_help"
                android:clickable="true"
                android:textAlignment="center"
                android:layout_gravity="center_horizontal|center_vertical"
                android:textAllCaps="false"
                android:textColor="#424242"
                android:textStyle="bold"
                android:textSize="14sp"/>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</LinearLayout>