<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@drawable/angle_search_radius"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/rl_search_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:paddingTop="10dp"
        android:src="@drawable/ic_search_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_search_img"
        android:background="@drawable/grey_line"
        android:orientation="horizontal"
        android:paddingLeft="20dp"
        android:paddingTop="5dp">

        <ImageView
            android:id="@+id/ll_search_img"
            android:layout_width="50dp"
            android:layout_height="55dp"
            android:layout_weight="1"
            android:background="@null"
            android:paddingBottom="7dp"
            android:scaleType="centerInside"
            android:src="@drawable/icon_elips_grey" />

        <EditText
            android:id="@+id/ll_search_address_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="10"
            android:background="#FFF"
            android:ellipsize="end"
            android:hint="Адресс места назначения"
            android:inputType="text"
            android:maxLines="1"
            android:paddingLeft="6dp"
            android:paddingTop="10dp"
            android:paddingBottom="20dp"
            android:singleLine="true"
            android:textColor="#D4D4D4"
            android:textSize="17sp" />

        <View
            android:layout_width="25dp"
            android:layout_height="1dp"
            android:layout_marginTop="20dp"
            android:layout_weight="0"
            android:background="#EDEDED"
            android:rotation="90" />

        <TextView
            android:id="@+id/ll_search_map"
            android:layout_width="80dp"
            android:layout_height="20dp"
            android:layout_weight="1.8"
            android:paddingRight="20dp"
            android:text="Карта"
            android:textColor="#424242"
            android:textSize="13sp" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/ll_search_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center_horizontal"
        android:paddingTop="10dp"
        android:paddingBottom="10dp">

        <TextView
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:background="@drawable/button_grey_story"
            android:foreground="?android:selectableItemBackground"
            android:gravity="center_horizontal|center_vertical"
            android:text="Добавить"
            android:textColor="#000000"
            android:textSize="14sp"
            android:textStyle="bold" />

    </LinearLayout>

</RelativeLayout>