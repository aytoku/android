<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="10dp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="15dp">

                <ImageButton
                    android:id="@+id/rl_choose_place.button_strelka"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#FFF"
                    android:layout_centerInParent="true"
                    android:layout_alignParentLeft="true"
                    android:src="@drawable/icon_strelka"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Служба поддержки"
                    android:layout_centerInParent="true"
                    android:paddingBottom="10dp"
                    android:textColor="#424242"
                    android:textSize="17sp"
                    android:textStyle="bold"/>

            </RelativeLayout>


                    <TextView
                        android:paddingLeft="40dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Последняя поездка"
                        android:paddingBottom="5dp"
                        android:textColor="#B9B9B9"
                        android:textSize="14sp"/>

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_item"
                android:layout_weight="0"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="10dp"
                app:cardUseCompatPadding="true"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@color/my_gray">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@drawable/background_with_shadow"
                    android:orientation="vertical"
                    >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Сегодня 10:10"
                            android:paddingTop="15dp"
                            android:paddingLeft="15dp"
                            android:paddingBottom="15dp"
                            android:textStyle="bold"
                            android:textColor="#424242"
                            android:textSize="17sp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="66 ₽"
                            android:paddingRight="15dp"
                            android:paddingLeft="160dp"
                            android:textStyle="bold"
                            android:textColor="#424242"
                            android:textSize="17sp"/>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="match_parent"
                            android:src="@drawable/icon_ellipse_red"
                            android:scaleType="center"
                            android:paddingTop="10dp"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Максима Горького, 23"
                            android:textSize="17sp"
                            android:textColor="#424242"
                            android:paddingTop="15dp"
                            />


                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="match_parent"
                            android:src="@drawable/icon_circle"
                            android:scaleType="center"
                            android:paddingTop="10dp"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Коста Хетагурова, 123"
                            android:textSize="17sp"
                            android:textColor="#424242"
                            android:paddingTop="15dp"
                            />


                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingBottom="20dp"
                        android:paddingTop="22dp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingRight="10dp"
                            android:paddingLeft="15dp">

                            <Button
                                android:id="@+id/button_write"
                                android:layout_width="180dp"
                                android:layout_height="70dp"
                                android:drawableStart="@drawable/icon_details"
                                android:text="Детали поездки"
                                android:paddingLeft="40dp"
                                android:paddingRight="40dp"
                                android:textAlignment="center"
                                android:background="@drawable/button_grey_story"
                                android:textAllCaps="false"
                                android:textColor="#424242"
                                android:textSize="14sp"
                                />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingRight="10dp"
                            android:paddingLeft="5dp">

                            <Button
                                android:id="@+id/button_call"
                                android:layout_width="180dp"
                                android:layout_height="70dp"
                                android:drawableStart="@drawable/icon_phone"
                                android:text="Водитель"
                                android:paddingLeft="40dp"
                                android:paddingRight="40dp"
                                android:textAlignment="center"
                                android:background="@drawable/button_grey_story"
                                android:textAllCaps="false"
                                android:textColor="#424242"
                                android:textSize="14sp"
                                />
                        </LinearLayout>


                    </LinearLayout>





                </LinearLayout>


            </androidx.cardview.widget.CardView>

            <TextView
                android:paddingLeft="40dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ваши вопросы"
                android:paddingTop="15dp"
                android:layout_weight="0"
                android:paddingBottom="10dp"
                android:textColor="#B9B9B9"
                android:textSize="14sp"/>


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:paddingLeft="15dp"
                android:paddingTop="10dp"
                android:orientation="horizontal">




                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Другая поездка"
                    android:paddingLeft="22dp"
                    android:paddingBottom="15dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerInParent="true"
                    android:textSize="17sp"
                    android:textColor="#424242"/>


                <ImageButton
                    android:id="@+id/ll_information_field.button_arrow_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="15dp"
                    android:layout_centerInParent="true"
                    android:background="#FFF"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/icon_arrow_right"/>



            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="#EDEDED"/>


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:paddingLeft="15dp"
                android:paddingTop="10dp"
                android:orientation="horizontal">




                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Неаккуратное вождение"
                    android:paddingLeft="22dp"
                    android:paddingBottom="15dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerInParent="true"
                    android:textSize="17sp"
                    android:textColor="#424242"/>


                <ImageButton
                    android:id="@+id/ll_information_field.button_arrow_right2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="15dp"
                    android:layout_centerInParent="true"
                    android:background="#FFF"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/icon_arrow_right"/>



            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="#EDEDED"/>


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:paddingLeft="15dp"
                android:paddingTop="10dp"
                android:orientation="horizontal">




                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ошибка программы"
                    android:layout_alignParentLeft="true"
                    android:layout_centerInParent="true"
                    android:paddingLeft="22dp"
                    android:paddingBottom="15dp"
                    android:textSize="17sp"
                    android:textColor="#424242"/>


                <ImageButton
                    android:id="@+id/ll_information_field.button_arrow_right3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="15dp"
                    android:layout_centerInParent="true"
                    android:background="#FFF"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/icon_arrow_right"/>



            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="#EDEDED"/>

        </LinearLayout>

    </LinearLayout>






</LinearLayout>