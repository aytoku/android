<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/ll_settings_rl_settings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/rl_settings_rl_settings_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Не звонить"
            android:paddingLeft="10dp"
            android:layout_centerInParent="true"
            android:layout_alignParentLeft="true"
            android:textColor="#424242"
            android:textSize="17sp"/>

        <Switch
            android:id="@+id/rl_settings_rl_settings_switch"
            android:track="@drawable/switch_track_custom"
            android:thumb="@drawable/switch_thumb"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:switchMinWidth="30dp"
            android:checked="false"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:scaleX="1"
            android:scaleY="1"/>

    </RelativeLayout>

</LinearLayout>