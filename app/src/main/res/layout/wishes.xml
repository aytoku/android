<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/img_cross_grey"
            android:paddingTop="25dp"
            android:paddingBottom="35dp"
            android:paddingLeft="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_cross_black"
            android:scaleType="center"
            android:scaleX="1.4"
            android:scaleY="1.3"/>


        <TextView
            android:id="@+id/title_wish"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="15dp"
            android:text="Пожелания"
            android:textStyle="bold"
            android:textSize="17sp"
            android:textColor="@color/my_black"
            android:paddingLeft="15dp"
            android:paddingBottom="20sp"/>


        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


                


        </androidx.recyclerview.widget.RecyclerView>


    </LinearLayout>


    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#EDEDED"/>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Стоимость поездки"
            android:paddingLeft="15dp"
            android:textColor="#424242"
            android:textSize="17sp"/>


        <TextView
            android:paddingTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:text="Вы можете самостоятельно отрегулировать стоимость вашей поездки"
            android:textColor="#D4D7DC"
            android:textSize="15dp"/>



        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="bottom"
                >

                <HorizontalScrollView
                    android:paddingTop="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingBottom="20dp"
                        android:background="@color/my_white"
                        android:src="@drawable/icon_scroll" />


                </HorizontalScrollView>


            </LinearLayout>
        </androidx.coordinatorlayout.widget.CoordinatorLayout>


    </LinearLayout>
    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#EDEDED"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Стоимость"
            android:paddingLeft="15dp"
            android:textSize="15sp"
            android:textColor="#DCDFE4"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="15dp"
                android:text="90 ₽"
                android:textSize="22sp"
                android:textColor="#424242"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:text="Добавлено"
                android:paddingLeft="20dp"
                android:textSize="15sp"
                android:textColor="#DCDFE4"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="30 ₽"
                android:paddingLeft="20dp"
                android:textSize="22sp"
                android:textColor="#424242"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="150dp">

        <ImageButton
            android:id="@+id/img_cross_grey1"
            android:layout_width="match_parent"
            android:background="@color/my_white"
            android:layout_height="match_parent"
            android:src="@drawable/ic_group_10_red_button"
            android:layout_gravity="left"
            android:scaleType="center"
            android:scaleX="1"
            android:scaleY="1"
            tools:ignore="DuplicateIds" />
        </LinearLayout>

    </LinearLayout>


</LinearLayout>

    <!--app:checkedState="@{my_data.checked}"-->