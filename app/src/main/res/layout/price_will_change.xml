<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="15dp"
    android:paddingLeft="12sp"
    android:background="@color/my_gray">


    <androidx.cardview.widget.CardView
        android:id="@+id/cv_item"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/my_gray"
        android:background="@drawable/cv"
        app:cardCornerRadius="10dp"
        app:cardElevation="0dp"
        app:cardUseCompatPadding="true">


        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">


            <LinearLayout
                android:id="@+id/ll_price_will_change"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/cv"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/ll_price_will_change.title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="25dp"
                    android:paddingTop="15dp"
                    android:text="Стоимость изменится"
                    android:textColor="#424242"
                    android:textSize="17sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/ll_price_will_change.description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:paddingBottom="20dp"
                    android:paddingTop="15dp"
                    android:text="Если поменять маршрут, стоимость \nпересчитается. Вы узнаете ее в\nконце поездки"
                    android:textColor="#424242"
                    android:textSize="17sp" />



                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <Button
                        android:id="@+id/ll_price_will_change.refuse_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Отменить"
                        android:textColor="#424242"
                        android:background="@drawable/for_button"
                        android:textSize="17sp"
                        android:paddingTop="20dp"
                        android:paddingBottom="20dp"
                        android:paddingLeft="50dp"
                        android:paddingRight="50dp"
                        android:textStyle="bold"
                        android:textAllCaps="false"/>


                    <Button
                        android:id="@+id/ll_price_will_change.accept_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Хорошо"
                        android:textColor="#FFFFFF"
                        android:textSize="17sp"
                        android:paddingTop="20dp"
                        android:paddingBottom="20dp"
                        android:paddingLeft="50dp"
                        android:paddingRight="50dp"
                        android:background="@drawable/for_button_red"
                        android:textStyle="bold"
                        android:textAllCaps="false"/>


                </LinearLayout>


            </LinearLayout>


        </androidx.coordinatorlayout.widget.CoordinatorLayout>


    </androidx.cardview.widget.CardView>


</LinearLayout>