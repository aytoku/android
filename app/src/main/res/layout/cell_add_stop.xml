<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF">

    <LinearLayout
        android:id="@+id/cl_add_stop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/cl_add_stop.ready"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Готово"
            android:gravity="right"
            android:paddingRight="15dp"
            android:textStyle="bold"
            android:textSize="15sp"
            android:textColor="#424242"
            android:paddingBottom="20dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="17dp"
            android:paddingRight="15dp"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/cl_add_stop.img_cross_grey"
                android:layout_width="40dp"
                android:background="#FCFCFC"
                android:layout_weight="0"
                android:layout_height="match_parent"
                android:src="@drawable/ic_cross"
                android:scaleType="center"
                android:scaleX="1.4"
                android:scaleY="1.3"/>

            <TextView
                android:id="@+id/cl_add_stop.address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#424242"
                android:paddingLeft="5dp"
                android:text="Максима Горького, 23"
                android:textSize="17sp"
                android:layout_weight="1"/>

            <ImageButton
                android:id="@+id/cl_add_stop.img_three_lines"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:background="#FCFCFC"
                android:paddingRight="8dp"
                android:src="@drawable/icon_three_lines"
                android:layout_weight="0.4"
                android:scaleX="1"
                android:scaleY="1.3"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="40dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/cl_add_stop.add_stop"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:textColor="#AAAAAA"
                android:paddingLeft="60dp"
                android:textSize="17sp"
                android:hint="Добавить остановку"
                android:inputType="text" />

        </LinearLayout>

    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>