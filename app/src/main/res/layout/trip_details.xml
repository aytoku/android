<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/empty_chat_with_driver">

    <RelativeLayout
        android:id="@+id/rl_order_details"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="15dp"
        android:background="@drawable/grey_line"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/rl_order_details.title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Детали заявки"
            android:textSize="17sp"
            android:layout_centerHorizontal="true"
            android:textColor="#424242"
            android:textStyle="bold"/>

        <ImageButton
            android:id="@+id/rl_order_details_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@null"
            android:paddingRight="15dp"
            android:src="@drawable/icon_refuse_button"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/rl_order_details.driver"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Водитель"
            android:gravity="center_vertical"
            android:paddingLeft="15dp"
            android:layout_weight="0.5"
            android:textColor="#424242"
            android:background="#F9F9F9"
            android:textStyle="bold"
            android:textSize="15sp"/>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="#EDEDED"/>

        <TextView
            android:id="@+id/rl_order_details.drivers_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Гаглоев Игорь Борисович"
            android:gravity="center_vertical"
            android:paddingLeft="15dp"
            android:layout_weight="0.5"
            android:textColor="#424242"
            android:background="@drawable/grey_line"
            android:textSize="17sp"/>

        <TextView
            android:id="@+id/rl_order_details.drivers_car"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Серый LADA 2114, A944 PK 15"
            android:gravity="center_vertical"
            android:layout_weight="0.5"
            android:background="@drawable/grey_line"
            android:paddingLeft="15dp"
            android:textColor="#424242"
            android:textSize="17sp"/>

        <TextView
            android:id="@+id/rl_order_details.drivers_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=" +7 (988) 839 57 11"
            android:gravity="center_vertical"
            android:layout_weight="0.5"
            android:background="@drawable/grey_line"
            android:paddingLeft="15dp"
            android:textColor="#424242"
            android:textSize="17sp"/>

            <TextView
                android:id="@+id/rl_order_details.trip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Поездка"
                android:gravity="center_vertical"
                android:layout_weight="0.5"
                android:paddingLeft="15dp"
                android:textColor="#424242"
                android:background="#F9F9F9"
                android:textStyle="bold"
                android:textSize="15sp"/>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="#EDEDED"/>

            <TextView
                android:id="@+id/rl_order_details.address1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="улица Базарова, 27/2"
                android:gravity="center_vertical"
                android:background="@drawable/grey_line"
                android:layout_weight="0.5"
                android:textColor="#424242"
                android:paddingLeft="15dp"
                android:textSize="17sp"/>

            <TextView
                android:id="@+id/rl_order_details.address2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="улица Налалихина, 47"
                android:gravity="center_vertical"
                android:paddingLeft="15dp"
                android:background="@drawable/grey_line"
                android:layout_weight="0.5"
                android:textColor="#424242"
                android:textSize="17sp"/>

            <TextView
                android:id="@+id/rl_order_details.time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Время"
                android:paddingLeft="15dp"
                android:layout_weight="0.5"
                android:textColor="#424242"
                android:gravity="center_vertical"
                android:background="#F9F9F9"
                android:textStyle="bold"
                android:textSize="15sp"/>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="#EDEDED"/>

            <TextView
                android:id="@+id/rl_order_details.times_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Сегодня в 22:26"
                android:layout_weight="0.5"
                android:background="@drawable/grey_line"
                android:paddingLeft="15dp"
                android:gravity="center_vertical"
                android:textColor="#424242"
                android:textSize="17sp"/>

            <TextView
                android:id="@+id/rl_order_details.cost"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Стоимость"
                android:paddingLeft="15dp"
                android:layout_weight="0.5"
                android:textColor="#424242"
                android:background="#F9F9F9"
                android:gravity="center_vertical"
                android:textStyle="bold"
                android:textSize="15sp"/>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="#EDEDED"/>

            <TextView
                android:id="@+id/rl_order_details.cost_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Эконом"
                android:background="@drawable/grey_line"
                android:layout_weight="0.5"
                android:paddingLeft="15dp"
                android:gravity="center_vertical"
                android:textColor="#424242"
                android:textSize="17sp"/>

            <TextView
                android:id="@+id/rl_order_details.price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="121 ₽"
                android:background="@drawable/grey_line"
                android:gravity="center_vertical"
                android:layout_weight="0.5"
                android:paddingLeft="15dp"
                android:textColor="#424242"
                android:textSize="17sp"/>

            <TextView
                android:id="@+id/rl_order_details.payment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Оплата"
                android:layout_weight="0.5"
                android:paddingLeft="15dp"
                android:gravity="center_vertical"
                android:textColor="#424242"
                android:background="#F9F9F9"
                android:textStyle="bold"
                android:textSize="15sp"/>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="#EDEDED"/>

            <TextView
                android:id="@+id/rl_order_details.payment_way"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="VISA 0729"
                android:gravity="center_vertical"
                android:paddingLeft="15dp"
                android:layout_weight="0.5"
                android:textColor="#424242"
                android:background="@drawable/grey_line"
                android:textSize="17sp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.2"
                android:background="#F9F9F9"/>

        </LinearLayout>

</LinearLayout>