<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageButton
        android:id="@+id/rl_info_button"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@null"
        android:paddingTop="10dp"
        android:foreground="?android:selectableItemBackground"
        android:layout_alignParentLeft="true"
        android:src="@drawable/icon_strelka"/>

    <LinearLayout
        android:id="@+id/ll_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_below="@+id/rl_info_button"
        android:orientation="vertical"
        android:paddingTop="25dp">

        <TextView
            android:id="@+id/ll_info_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="30dp"
            android:paddingTop="10dp"
            android:paddingBottom="30dp"
            android:text="Информация"
            android:textColor="#424242"
            android:textSize="21sp"
            android:textStyle="bold" />

        <RelativeLayout
            android:id="@+id/rl_info1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/grey_line"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:foreground="?android:selectableItemBackground"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/ll_info_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:paddingLeft="30dp"
                android:text="Тарифы"
                android:textColor="#424242"
                android:textSize="17sp" />

            <ImageButton
                android:id="@+id/ll_info.img_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:background="@null"
                android:paddingRight="15dp"
                android:src="@drawable/icon_arrow_right" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_info2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/grey_line"
            android:foreground="?android:selectableItemBackground"
            android:orientation="horizontal"
            android:paddingTop="10dp"
            android:paddingBottom="10dp">

            <TextView
                android:id="@+id/ll_info_title1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="30dp"
                android:layout_centerInParent="true"
                android:layout_alignParentLeft="true"
                android:text="Партнеры"
                android:textColor="#424242"
                android:textSize="17sp" />

            <ImageButton
                android:id="@+id/ll_info.img_arrow2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:background="@null"
                android:paddingRight="15dp"
                android:src="@drawable/icon_arrow_right" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_info3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/grey_line"
            android:foreground="?android:selectableItemBackground"
            android:orientation="horizontal"
            android:paddingTop="10dp"
            android:paddingBottom="10dp">

            <TextView
                android:id="@+id/ll_info_title2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="30dp"
                android:layout_centerInParent="true"
                android:layout_alignParentLeft="true"
                android:text="О приложении"
                android:textColor="#424242"
                android:textSize="17sp" />

            <ImageButton
                android:id="@+id/ll_info_img_arrow3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:background="@null"
                android:paddingRight="15dp"
                android:src="@drawable/icon_arrow_right" />

        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>

