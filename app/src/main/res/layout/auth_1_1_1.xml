<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageButton
        android:id="@+id/cl_auth_1_1_1_image_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:paddingLeft="15dp"
        android:paddingTop="15dp"
        android:src="@drawable/icon_strelka"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/cl_auth_1_1_1_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="Ваш номер телефона"
        android:textColor="#424242"
        android:paddingTop="10dp"
        android:textAlignment="center"
        android:textSize="19sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cl_auth_1_1_1_image_button" />

    <TextView
        android:id="@+id/cl_auth_1_1_1_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="Россия +7"
        android:paddingTop="20dp"
        android:paddingBottom="5dp"
        android:textAllCaps="false"
        android:textColor="#AAAAAA"
        android:textSize="17sp"
        android:drawableRight="@drawable/ic_number_arrow"
        android:drawablePadding="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cl_auth_1_1_1_title" />

    <TextView
        android:id="@+id/text_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="70dp"
        android:paddingTop="10dp"
        android:text="+7"
        android:textColor="#000000"
        android:textSize="28sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/cl_auth_1_1_1_editTextNumber" />

    <EditText
        android:id="@+id/cl_auth_1_1_1_editTextNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#FD6F6D"
        android:hint="963 378-86-96"
        android:inputType="number"
        android:paddingLeft="112dp"
        android:textAlignment="viewStart"
        android:textColorHint="#C0BFC6"
        android:textCursorDrawable="@null"
        android:textSize="28sp"
        android:maxLength="13"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cl_auth_1_1_1_button"
        tools:ignore="MissingPrefix" />

    <TextView
        android:id="@+id/cl_auth_1_1_1_text_alert"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textAlignment="center"
        android:textColor="#EE4D3F"
        android:paddingBottom="10dp"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cl_auth_1_1_1_editTextNumber" />

    <TextView
        android:id="@+id/cl_auth_1_1_1_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:paddingBottom="5dp"
        android:text=""
        android:textAlignment="center"
        android:textColor="#979797"
        android:textSize="13sp"
        app:layout_constraintBottom_toTopOf="@+id/cl_auth__1_1_1_rl_auth_1_1_1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <RelativeLayout
        android:id="@+id/cl_auth__1_1_1_rl_auth_1_1_1"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center_horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/cl_auth_1_1_1_card"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            app:cardCornerRadius="11dp">

            <TextView
                android:id="@+id/cl_auth_1_1_1_button1"
                android:layout_width="350dp"
                android:layout_height="50dp"
                android:background="@drawable/mybuttongrey"
                android:text="Далее"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal|center_vertical"
                android:textAllCaps="false"
                android:textColor="#33353E"
                android:textSize="17sp" />

        </androidx.cardview.widget.CardView>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>