<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="#FFF"
    android:layout_height="match_parent">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/ll_search_new"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/angle_search_radius"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/ll_search_new.line"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/line_search"
                    android:ems="3"
                    android:inputType="none"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingLeft="20dp"
                    android:paddingTop="5dp">

                    <ImageView
                        android:id="@+id/ll_search_new.circle_img"
                        android:layout_width="50dp"
                        android:layout_height="55dp"
                        android:layout_weight="1"
                        android:paddingBottom="7dp"
                        android:scaleType="centerInside"
                        android:src="@drawable/icon_elips_grey"/>

                    <EditText
                        android:id="@+id/ll_search_new.address_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="10"
                        android:background="#FFF"
                        android:paddingLeft="6dp"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:inputType="text"
                        android:paddingTop="10dp"
                        android:paddingBottom="20dp"
                        android:hint="Адресс места назначения"
                        android:textColor="#D4D4D4"
                        android:textSize="17sp"/>

                    <View
                        android:layout_width="25dp"
                        android:layout_height="1dp"
                        android:layout_marginTop="20dp"
                        android:layout_weight="0"
                        android:background="#EDEDED"
                        android:rotation="90"/>

                    <TextView
                        android:id="@+id/ll_search_new.map"
                        android:layout_width="80dp"
                        android:layout_height="20dp"
                        android:layout_weight="1.8"
                        android:text="Карта"
                        android:paddingRight="20dp"
                        android:textColor="#424242"
                        android:textSize="13sp"/>

                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="#EDEDED"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ll_search_new.img_box"
                    android:layout_width="90dp"
                    android:layout_height="match_parent"
                    android:paddingTop="10dp"
                    android:scaleType="center"
                    android:scaleX="1.4"
                    android:scaleY="1.2"
                    android:src="@drawable/ic_work"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/ll_search_new.work"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="10dp"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:text="Работа"
                        android:textColor="#424242"
                        android:textSize="17sp"/>

                    <TextView
                        android:id="@+id/ll_search_new.work_address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="15dp"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:text="Галковского, 223"
                        android:textColor="#9B9B9B"
                        android:textSize="11sp"/>

                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="#EDEDED"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ll_search_new.img_home"
                    android:layout_width="90dp"
                    android:layout_height="match_parent"
                    android:paddingTop="5dp"
                    android:scaleType="center"
                    android:scaleX="1.4"
                    android:scaleY="1.3"
                    android:src="@drawable/icon_home"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/ll_search_new.home"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="10dp"
                        android:text="Домой"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:textColor="#424242"
                        android:textSize="17sp"/>

                    <TextView
                        android:id="@+id/ll_search_new.home_address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="10dp"
                        android:text="Некрасова, 22"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:textColor="#9B9B9B"
                        android:textSize="11sp"/>

                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="#EDEDED"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ll_search_new.img_tag"
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:paddingTop="10dp"
                android:scaleType="center"
                android:scaleX="1.4"
                android:scaleY="1.2"
                android:src="@drawable/ic_tag"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <TextView
                android:id="@+id/ll_search_new.address_title1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:maxLines="1"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="Коста Хетагурова, 123"
                android:textColor="#424242"
                android:textSize="17sp"/>

            <TextView
                android:id="@+id/ll_search_new.address_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp"
                android:maxLines="2"
                android:ellipsize="end"
                android:text="г. Владикавказ, республика Северная Осетия-Алания,\nРоссия"
                android:textColor="#9B9B9B"
                android:textSize="11sp"/>

            </LinearLayout>

        </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="#EDEDED"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ll_search_new.img_clock"
                    android:layout_width="90dp"
                    android:layout_height="match_parent"
                    android:paddingTop="10dp"
                    android:scaleType="center"
                    android:scaleX="1.4"
                    android:scaleY="1.2"
                    android:src="@drawable/ic_clock"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/ll_search_new.address_title2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="10dp"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:text="Анечка"
                        android:textColor="#424242"
                        android:textSize="17sp"/>

                    <TextView
                        android:id="@+id/ll_search_new.address_desc1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="10dp"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:text="Августовских Событий 94"
                        android:textColor="#9B9B9B"
                        android:textSize="11sp"/>

                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="#EDEDED"/>

            <TextView
                android:id="@+id/ll_search_new.address_title3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="40dp"
                android:maxLines="1"
                android:ellipsize="end"
                android:singleLine="true"
                android:paddingTop="10dp"
                android:text="Августовских событий, 79"
                android:textColor="#424242"
                android:textSize="17sp"/>

            <TextView
                android:id="@+id/ll_search_new.address_desc2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:paddingLeft="40dp"
                android:ellipsize="end"
                android:paddingTop="5dp"
                android:text="г. Владикавказ, республика Северная Осетия-Алания,\n Россия"
                android:textColor="#9B9B9B"
                android:textSize="11sp"/>

            <TextView
                android:id="@+id/ll_search_new.address_title4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="40dp"
                android:maxLines="1"
                android:ellipsize="end"
                android:singleLine="true"
                android:paddingTop="10dp"
                android:text="Мамсурова, 3"
                android:textColor="#424242"
                android:textSize="17sp"/>

            <TextView
                android:id="@+id/ll_search_new.address_desc3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:paddingLeft="40dp"
                android:paddingTop="5dp"
                android:ellipsize="end"
                android:text="г. Владикавказ, республика Северная Осетия-Алания,\n Россия"
                android:textColor="#9B9B9B"
                android:textSize="11sp"/>

            <TextView
                android:id="@+id/ll_search_new.address_title5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="40dp"
                android:maxLines="1"
                android:ellipsize="end"
                android:singleLine="true"
                android:paddingTop="10dp"
                android:text="Леваневского, 3"
                android:textColor="#424242"
                android:textSize="17sp"/>

            <TextView
                android:id="@+id/ll_search_new.address_desc4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:ellipsize="end"
                android:paddingLeft="40dp"
                android:paddingTop="10dp"
                android:text="г. Владикавказ, республика Северная Осетия-Алания,\n Россия"
                android:textColor="#9B9B9B"
                android:textSize="11sp"/>

        </LinearLayout>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</LinearLayout>