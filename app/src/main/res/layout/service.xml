<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:paddingTop="10dp"
                android:paddingLeft="15dp">

                <ImageButton
                    android:id="@+id/ll_service.button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#FFF"
                    android:layout_centerInParent="true"
                    android:layout_alignParentLeft="true"
                    android:src="@drawable/icon_strelka"/>

                <TextView
                    android:id="@+id/ll_service.title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Служба поддержки"
                    android:layout_centerInParent="true"
                    android:paddingBottom="10dp"
                    android:textColor="#424242"
                    android:textSize="17sp"
                    android:textStyle="bold"/>

            </RelativeLayout>

                    <TextView
                        android:id="@+id/ll_service.last_trip"
                        android:paddingLeft="15dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Последняя поездка"
                        android:layout_weight="0"
                        android:paddingBottom="5dp"
                        android:textColor="#B9B9B9"
                        android:textSize="14sp"/>

            <androidx.cardview.widget.CardView
                android:id="@+id/ll_service.cv"
                android:layout_weight="0"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="10dp"
                app:cardUseCompatPadding="true"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@color/my_gray">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@drawable/background_with_shadow"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/ll_service.date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Сегодня 10:10"
                            android:paddingTop="15dp"
                            android:paddingLeft="15dp"
                            android:paddingBottom="15dp"
                            android:textStyle="bold"
                            android:textColor="#424242"
                            android:textSize="17sp"/>

                        <TextView
                            android:id="@+id/ll_service.cost"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="66 ₽"
                            android:paddingRight="15dp"
                            android:paddingLeft="160dp"
                            android:textStyle="bold"
                            android:textColor="#424242"
                            android:textSize="17sp"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/ll_service.omg_red_circle"
                            android:layout_width="50dp"
                            android:layout_height="match_parent"
                            android:src="@drawable/icon_ellipse_red"
                            android:scaleType="center"
                            android:paddingTop="10dp" />

                        <TextView
                            android:id="@+id/ll_service.address_title1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Максима Горького, 23"
                            android:textSize="17sp"
                            android:textColor="#424242"
                            android:paddingTop="15dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/ll_service.img_blue_circle"
                            android:layout_width="50dp"
                            android:layout_height="match_parent"
                            android:src="@drawable/icon_circle"
                            android:scaleType="center"
                            android:paddingTop="10dp" />

                        <TextView
                            android:id="@+id/ll_service.address_title2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Коста Хетагурова, 123"
                            android:textSize="17sp"
                            android:textColor="#424242"
                            android:paddingTop="15dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingBottom="20dp"
                        android:paddingTop="22dp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingRight="10dp"
                            android:paddingLeft="15dp">

                            <Button
                                android:id="@+id/ll_service.button_details"
                                android:layout_width="180dp"
                                android:layout_height="70dp"
                                android:drawableStart="@drawable/icon_details"
                                android:text="Детали поездки"
                                android:paddingLeft="40dp"
                                android:paddingRight="40dp"
                                android:textAlignment="center"
                                android:background="@drawable/button_grey_story"
                                android:textAllCaps="false"
                                android:textColor="#424242"
                                android:textSize="14sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingRight="10dp"
                            android:paddingLeft="5dp">

                            <Button
                                android:id="@+id/ll_service.button_call"
                                android:layout_width="180dp"
                                android:layout_height="70dp"
                                android:drawableStart="@drawable/icon_phone"
                                android:text="Водитель"
                                android:paddingLeft="40dp"
                                android:paddingRight="40dp"
                                android:textAlignment="center"
                                android:background="@drawable/button_grey_story"
                                android:textAllCaps="false"
                                android:textColor="#424242"
                                android:textSize="14sp" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/ll_service.questions"
                android:paddingLeft="35dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ваши вопросы"
                android:paddingTop="15dp"
                android:layout_weight="0"
                android:paddingBottom="10dp"
                android:textColor="#B9B9B9"
                android:textSize="14sp"/>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:paddingLeft="15dp"
                android:paddingTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/ll_service.another_trip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Другая поездка"
                    android:paddingLeft="22dp"
                    android:paddingBottom="15dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerInParent="true"
                    android:textSize="17sp"
                    android:textColor="#424242"/>

                <ImageButton
                    android:id="@+id/ll_service.img_arrow1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="15dp"
                    android:layout_centerInParent="true"
                    android:background="#FFF"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/icon_arrow_right"/>

            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="#EDEDED"/>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:paddingLeft="15dp"
                android:paddingTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/ll_service.ad_ride"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Неаккуратное вождение"
                    android:paddingLeft="22dp"
                    android:paddingBottom="15dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerInParent="true"
                    android:textSize="17sp"
                    android:textColor="#424242"/>

                <ImageButton
                    android:id="@+id/ll_service.img_arrow2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="15dp"
                    android:layout_centerInParent="true"
                    android:background="#FFF"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/icon_arrow_right"/>

            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="#EDEDED"/>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:paddingLeft="15dp"
                android:paddingTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/ll_service.program_error"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ошибка программы"
                    android:layout_alignParentLeft="true"
                    android:layout_centerInParent="true"
                    android:paddingLeft="22dp"
                    android:paddingBottom="15dp"
                    android:textSize="17sp"
                    android:textColor="#424242"/>

                <ImageButton
                    android:id="@+id/ll_service.img_arrow3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="15dp"
                    android:layout_centerInParent="true"
                    android:background="#FFF"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/icon_arrow_right"/>

            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="#EDEDED"/>

</LinearLayout>