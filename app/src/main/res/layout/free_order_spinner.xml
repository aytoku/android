<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/rl_driver_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingLeft="15dp"
        android:background="@drawable/grey_line"
        android:paddingBottom="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Сортировка:"
            android:textSize="16sp"
            android:gravity="center_vertical"
            android:layout_alignParentLeft="true"
            android:textColor="#424242"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:paddingRight="20dp">

            <Spinner
                android:id="@+id/spinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="40dp"
                android:textAlignment="center"
                android:background="@android:color/transparent"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_free_orders_arrow"/>

        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingLeft="15dp"
        android:paddingBottom="10dp"
        android:background="@drawable/grey_line"
        android:layout_below="@+id/rl_driver_spinner">

        <TextView
            android:id="@+id/rl_free_orders_spinner_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:gravity="center_vertical"
            android:text="По тарифу:"
            android:textColor="#424242"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/rl_free_orders_spinner_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:layout_centerInParent="true"
            android:layout_toEndOf="@+id/rl_free_orders_spinner_title"
            android:text=""
            android:textColor="#424242"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/rl_free_orders_spinner_img"
            android:layout_width="32dp"
            android:layout_height="30dp"
            android:layout_centerInParent="true"
            android:layout_alignParentRight="true"
            android:paddingRight="20dp"
            android:src="@drawable/ic_free_orders_arrow"/>

    </RelativeLayout>

</RelativeLayout>