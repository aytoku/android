<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/ll_cell_travel_story_cv"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="15dp"
        app:cardUseCompatPadding="true"
        app:cardElevation="0dp"
        app:cardBackgroundColor="@color/my_gray">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/background_with_shadow"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/ll_cell_travel_story_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Сегодня 10:10"
                    android:paddingTop="15dp"
                    android:paddingLeft="20dp"
                    android:layout_centerInParent="true"
                    android:layout_alignParentLeft="true"
                    android:paddingBottom="15dp"
                    android:textStyle="bold"
                    android:textColor="#424242"
                    android:textSize="17sp"/>

                <TextView
                    android:id="@+id/ll_cell_travel_story_cost"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="66 ₽"
                    android:paddingRight="20dp"
                    android:layout_centerInParent="true"
                    android:layout_alignParentRight="true"
                    android:textStyle="bold"
                    android:textColor="#424242"
                    android:textSize="17sp"/>

            </RelativeLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/ll_cell_travel_story_recycler"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:overScrollMode="never"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="20dp"
                android:paddingTop="22dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:focusable="true"
                    android:paddingTop="20dp"
                    android:gravity="center_horizontal"
                    tools:ignore="Orientation">

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:focusable="true"
                        android:clickable="true"
                        android:elevation="0dp"
                        android:foreground="?android:selectableItemBackground"
                        app:cardElevation="0dp"
                        app:cardBackgroundColor="#F3F3F3"
                        app:cardCornerRadius="11dp">

                        <TextView
                            android:id="@+id/ll_cell_travel_story_button_1"
                            android:layout_width="150dp"
                            android:layout_height="50dp"
                            android:text="Помощь"
                            android:foreground="?android:selectableItemBackground"
                            android:focusable="true"
                            android:drawableStart="@drawable/icon_yellow_help"
                            android:clickable="true"
                            android:paddingLeft="20dp"
                            android:textStyle="bold"
                            android:textAlignment="center"
                            android:gravity="center_vertical"
                            android:textAllCaps="false"
                            android:textColor="#424242"
                            android:textSize="14sp"
                            tools:ignore="RtlCompat" />

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:focusable="true"
                    android:paddingTop="20dp"
                    android:gravity="center_horizontal"
                    tools:ignore="Orientation">

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:focusable="true"
                        android:paddingRight="10dp"
                        android:paddingLeft="10dp"
                        android:foreground="?android:selectableItemBackground"
                        android:clickable="true"
                        android:elevation="0dp"
                        app:cardElevation="0dp"
                        app:cardBackgroundColor="#F3F3F3"
                        app:cardCornerRadius="11dp">

                        <TextView
                            android:id="@+id/ll_cell_travel_story_button_2"
                            android:layout_width="150dp"
                            android:layout_height="50dp"
                            android:drawableStart="@drawable/icon_phone"
                            android:text="Водитель"
                            android:focusable="true"
                            android:textStyle="bold"
                            android:clickable="true"
                            android:paddingLeft="20dp"
                            android:textAlignment="center"
                            android:foreground="?android:selectableItemBackground"
                            android:gravity="center_vertical"
                            android:textAllCaps="false"
                            android:textColor="#424242"
                            android:textSize="14sp"
                            tools:ignore="RtlCompat" />

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>