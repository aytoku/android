<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

            <TextView
                android:id="@+id/LL_new_card.title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#424242"
                android:paddingTop="15dp"
                android:paddingBottom="10dp"
                android:layout_gravity="center_horizontal"
                android:text="Новая карта"
                android:textStyle="bold"
                android:textSize="19sp"/>

            <TextView
                android:id="@+id/LL_new_card.card_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:paddingBottom="3dp"
                android:paddingLeft="15dp"
                android:text="Номер карты"
                android:textSize="13sp"
                android:textColor="#8A8A8A"/>

            <EditText
                android:id="@+id/LL_new_card.card_number_field"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="20"
                android:paddingTop="15dp"
                android:textAlignment="center"
                android:background="@drawable/line_grey"
                android:textColorHint="#C0BFC6"
                android:maxLength="12"
                android:inputType="number"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                <TextView
                    android:id="@+id/LL_new_card.term"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="15dp"
                    android:text="Срок действия"
                    android:paddingTop="5dp"
                    android:paddingBottom="20dp"
                    android:textSize="13sp"
                    android:textColor="#8A8A8A"/>

                    <EditText
                        android:id="@+id/LL_new_card.term_field"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:textAlignment="center"
                        android:paddingTop="15dp"
                        android:background="@drawable/line_grey"
                        android:textColorHint="#C0BFC6"
                        android:maxLength="5"
                        android:inputType="number"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/LL_new_card.cvv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="15dp"
                        android:text="CVV"
                        android:paddingTop="5dp"
                        android:paddingBottom="20dp"
                        android:textSize="13sp"
                        android:textColor="#8A8A8A"/>

                    <EditText
                        android:id="@+id/LL_new_card.cvv_field"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:textAlignment="center"
                        android:layout_weight="1"
                        android:background="@drawable/line"
                        android:paddingTop="15dp"
                        android:textColorHint="#C0BFC6"
                        android:maxLength="4"
                        android:inputType="numberPassword"/>

                    <TextView
                        android:id="@+id/LL_new_card.cv_desc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="15dp"
                        android:text="Трехзначный код  на\nобороте карты"
                        android:textSize="13sp"
                        android:paddingBottom="40dp"
                        android:textColor="#8A8A8A"/>

                </LinearLayout>

            </LinearLayout>

            <Button
                android:id="@+id/LL_new_card.button"
                android:layout_width="380dp"
                android:layout_height="60dp"
                android:textAlignment="center"
                android:background="@drawable/button_grey_story"
                android:layout_gravity="center_horizontal"
                android:text="Привязать карту"
                android:textAllCaps="false" />

</LinearLayout>