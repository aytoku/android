<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/rl_tariffs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="15dp">

        <ImageButton
            android:id="@+id/rl_tariffs.button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#FFF"
            android:layout_centerInParent="true"
            android:layout_alignParentLeft="true"
            android:src="@drawable/icon_strelka"/>

        <TextView
            android:id="@+id/rl_tariffs.title"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:layout_centerInParent="true"
            android:text="Тарифы"
            android:paddingBottom="20dp"
            android:textStyle="bold"
            android:textSize="17sp"
            android:textColor="#424242"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="#F3F3F3"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="15dp"
        android:paddingTop="10dp"
        android:paddingLeft="10dp">
        <Spinner
            android:id="@+id/choose"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <TextView
        android:id="@+id/rl_tariffs.cost"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:textSize="15sp"
        android:paddingLeft="15dp"
        android:textStyle="bold"
        android:gravity="center_vertical"
        android:background="#F3F3F3"
        android:text="Стоимость расчета"
        android:textColor="#424242"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding = "10dp">

        <TextView
            android:id="@+id/rl_tariffs.price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:text="39 руб."
            android:layout_alignParentRight="true"
            android:textStyle="bold"
            android:textColor="#424242"/>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#EDEDED"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="15dp"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:paddingRight="15dp">

        <TextView
            android:id="@+id/rl_tariffs.free_expectation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:text="Бесплатное ожидание"
            android:layout_alignParentLeft="true"
            android:textStyle="bold"
            android:textColor="#424242"/>

        <TextView
            android:id="@+id/rl_tariffs.expectation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:text="3 мин"
            android:layout_alignParentRight="true"
            android:textStyle="bold"
            android:textColor="#424242"/>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#EDEDED"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="15dp"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:paddingRight="15dp">

        <TextView
            android:id="@+id/rl_tariff.no_free_expectation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:text="Платное ожидание"
            android:layout_alignParentLeft="true"
            android:textStyle="bold"
            android:textColor="#424242"/>

        <TextView
            android:id="@+id/rl_tariffs.expectation1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:text="4 руб/мин"
            android:layout_alignParentRight="true"
            android:textStyle="bold"
            android:textColor="#424242"/>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#EDEDED"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="15dp"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:paddingRight="15dp">

        <TextView
            android:id="@+id/rl_tariffs.town_cost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:text="Стоимость по городу"
            android:layout_alignParentLeft="true"
            android:textStyle="bold"
            android:textColor="#424242"/>

        <TextView
            android:id="@+id/rl_tariffs.expectation2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:text="4 руб/мин"
            android:layout_alignParentRight="true"
            android:textStyle="bold"
            android:textColor="#424242"/>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#EDEDED"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:paddingLeft="15dp"
        android:paddingTop="10dp"
        android:paddingRight="15dp">

        <TextView
            android:id="@+id/rl_tariffs.expectation.countryside_cost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:text="Стоимость загород"
            android:layout_alignParentLeft="true"
            android:textStyle="bold"
            android:textColor="#424242"/>

        <TextView
            android:id="@+id/rl_tariffs.expectation3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:text="4 руб/мин"
            android:layout_alignParentRight="true"
            android:textStyle="bold"
            android:textColor="#424242"/>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#EDEDED"/>

</LinearLayout>