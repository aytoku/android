<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@drawable/angle_search_radius"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/ll_search_new.line"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/line_search"
        android:ems="3"
        android:inputType="none"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="20dp"
        android:background="@drawable/grey_line"
        android:paddingTop="5dp">

        <ImageView
            android:id="@+id/ll_search_new.circle_img"
            android:layout_width="50dp"
            android:layout_height="55dp"
            android:layout_weight="1"
            android:background="@null"
            android:paddingBottom="7dp"
            android:scaleType="centerInside"
            android:src="@drawable/icon_elips_grey"/>

        <EditText
            android:id="@+id/ll_search_new_address_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="10"
            android:background="#FFF"
            android:paddingLeft="6dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:singleLine="true"
            android:inputType="text"
            android:paddingTop="10dp"
            android:paddingBottom="20dp"
            android:hint="Адресс места назначения"
            android:textColor="#D4D4D4"
            android:textSize="17sp"/>

        <View
            android:layout_width="25dp"
            android:layout_height="1dp"
            android:layout_marginTop="20dp"
            android:layout_weight="0"
            android:background="#EDEDED"
            android:rotation="90"/>

        <TextView
            android:id="@+id/ll_search_new.map"
            android:layout_width="80dp"
            android:layout_height="20dp"
            android:layout_weight="1.8"
            android:text="Карта"
            android:paddingRight="20dp"
            android:textColor="#424242"
            android:textSize="13sp"/>

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/search_new_recyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:overScrollMode="never"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/search_new_recyclerView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:overScrollMode="never"/>

</LinearLayout>