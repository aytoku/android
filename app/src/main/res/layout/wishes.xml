<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/ll_wishes"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.6"
                android:orientation="vertical">


                <ImageButton
                    android:id="@+id/ll_wishes.img_cross_grey"
                    android:paddingTop="25dp"
                    android:paddingBottom="25dp"
                    android:layout_width="60dp"
                    android:background="#CDFCFAFA"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_cross_black"
                    android:scaleType="center"
                    android:scaleX="1.4"
                    android:scaleY="1.3"/>


                <TextView
                    android:id="@+id/ll_wishes.title_wish"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="10dp"
                    android:text="Пожелания"
                    android:textStyle="bold"
                    android:textSize="17sp"
                    android:textColor="@color/my_black"
                    android:paddingLeft="15dp"
                    android:paddingBottom="15dp"/>


                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycler_wishes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                </androidx.recyclerview.widget.RecyclerView>


            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="#EDEDED"/>


            <include
            android:id="@+id/ll_wishes.include_change_cost"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.9"
            layout="@layout/cell_travels_cost_change"/>


             <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="#EDEDED"/>

            <include
                android:id="@+id/ll_wishes.include_ost"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.1"
                layout="@layout/cell_travel_cost"/>


</LinearLayout>
